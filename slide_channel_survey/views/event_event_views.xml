<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="event_event_view_form" model="ir.ui.view">
        <field name="model">event.event</field>
        <field name="inherit_id" ref="slide_partner_menu.event_event_view_form"/>
        <field name="arch" type="xml">
            <button name="button_show_slide_slide_partner" position="after">
                <button name="button_show_survey_user_input"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-tasks">
                    <field name="count_survey_participations" string="Survey participations" widget="statinfo"/>
                </button>
            </button>
        </field>
    </record>
</odoo>
