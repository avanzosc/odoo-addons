<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="act_res_partner_2_bank" model="ir.actions.act_window">
        <field name="name">Bank Accounts</field>
        <field name="res_model">res.partner.bank</field>
        <field name="view_mode">tree,form</field>
        <field
      name="context"
    >{'search_default_partner_id': active_id, 'default_partner_id': active_id}</field>
        <field
      name="groups_id"
      eval="[(4, ref('account_payment_order.group_account_payment'))]"
    />
    </record>
    <record id="act_res_partner_2_mandate" model="ir.actions.act_window">
        <field name="name">Mandates</field>
        <field name="res_model">account.banking.mandate</field>
        <field name="view_mode">tree,form</field>
        <field
      name="context"
    >{'search_default_partner_id': active_id, 'default_partner_id': active_id}</field>
        <field
      name="groups_id"
      eval="[(4, ref('account_payment_order.group_account_payment'))]"
    />
    </record>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.view.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
        <div name="button_box" position="inside">
            <button
          class="oe_stat_button"
          name="%(account_banking_mandate_usability.act_res_partner_2_bank)d"
          type="action"
          groups="account_payment_order.group_account_payment"
          icon="fa-credit-card"
        >
                <field
            string="Bank accounts"
            name="bank_acc_count"
            widget="statinfo"
          />
            </button>
            <button
          class="oe_stat_button"
          name="%(account_banking_mandate_usability.act_res_partner_2_mandate)d"
          type="action"
          groups="account_payment_order.group_account_payment"
          icon="fa-pencil-square-o"
        >
                <field string="Mandates" name="mandate_count" widget="statinfo" />
            </button>
       </div>
       </field>
       </record>
</odoo>
