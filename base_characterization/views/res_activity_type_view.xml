<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_activity_type_tree_view" model="ir.ui.view">
        <field name="name">res.activity.type.tree.view</field>
        <field name="model">res.activity.type</field>
        <field name="arch" type="xml">
            <tree string="Area">
                <field name="name"/>
                <field name="activity_id"/>
            </tree>
        </field>
    </record>

    <record id="res_activity_type_search_view" model="ir.ui.view">
        <field name="name">res.activity.type.search</field>
        <field name="model">res.activity.type</field>
        <field name="arch" type="xml">
            <search string="Search area">
                <field name="name" />
                <field name="activity_id"/>
            </search>
        </field>
    </record>

    <record id="res_activity_type_action" model="ir.actions.act_window">
        <field name="name">Activity type</field>
        <field name="res_model">res.activity.type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
        }</field>
    </record>

</odoo>
