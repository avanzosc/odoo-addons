<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_order_line_tree" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="student_id" />
                <field name="student_school_id" />
                <field name="event_id" />
            </field>
        </field>
    </record>
    <record id="sale_order_line_view_form_readonly" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="student_id" />
                <field name="student_school_id" />
                <field name="event_id" />
            </field>
        </field>
    </record>
    <record id="view_sales_order_line_filter" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_sales_order_line_filter"/>
        <field name="arch" type="xml">
            <field name="order_partner_id" position="after">
                <field name="student_id" />
                <field name="student_school_id" />
                <field name="event_id" />
            </field>
            <filter name="order" position="after">
                <filter string="Student" name="student" domain="[]" context="{'group_by':'student_id'}"/>
                <filter string="School" name="school" domain="[]" context="{'group_by':'student_school_id'}"/>
                <filter string="Event" name="event" domain="[]" context="{'group_by':'event_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
