<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="survey_question_form" model="ir.ui.view">
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form" />
        <field name="arch" type="xml">
            <field name="question_type" position="after">
                <field name="question_normative_id"/>
            </field>
        </field>
    </record>

    <record id="survey_question_tree" model="ir.ui.view">
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_tree" />
        <field name="arch" type="xml">
            <field name="survey_id" position="after">
                <field name="question_normative_id" optional="show"/>
            </field>
        </field>
    </record>

    <record id="survey_question_search" model="ir.ui.view">
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_search" />
        <field name="arch" type="xml">
            <field name="survey_id" position="after">
                <field name="question_normative_id"/>
            </field>
            <filter name="group_by_survey" position="after">
                <filter name="group_question_rormative" string="Question Normative"
                    domain="[]" context="{'group_by':'question_normative_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
