<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_move_import_view_tree" model="ir.ui.view">
        <field name="model">account.move.import</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state == 'done'" decoration-bf="state == 'pass'">
                <field name="name"/>
                <field name="file_date"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="account_move_import_view_form" model="ir.ui.view">
        <field name="model">account.move.import</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
            name="action_import_file"
            string="Import"
            type="object"
            class="oe_read_only"
            states="draft,2validate,pass,error"
          />
                    <button
            name="action_validate"
            string="Validate"
            type="object"
            class="oe_read_only"
            states="2validate,error,pass"
          />
                    <button
            name="action_process"
            string="Process"
            type="object"
            class="oe_read_only"
            states="error,pass"
          />
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
              string="Import Lines"
              type="object"
              name="button_open_import_line"
              attrs="{'invisible':[('import_line_ids', '=', [])]}"
              class="oe_stat_button"
              icon="fa-bars"
            />
                        <button
              type="object"
              name="button_open_account_move"
              string="Account Move"
              attrs="{'invisible':[('account_move_count', '=', 0)]}"
              class="oe_stat_button"
              icon="fa-folder-open"
            >
                            <field name="account_move_count"/>
                        </button>
                    </div>
                    <group>
                        <group string="Import Data">
                            <field name="filename"/>
                            <field name="data" filename="filename"/>
                            <field name="file_date"/>
                        </group>
                        <group string="Account Move Information">
                            <field name="journal_id" domain="[('type', '=', 'sale'), '|', ('company_id', '=', company_id), ('company_id', '=', False)]"/>
                            <field name="search_partner_by_ref"/>
                            <field name="search_product_by_code"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Imported Lines">
                            <field name="import_line_ids"/>
                        </page>
                        <page
              string="Error Log"
              attrs="{'invisible':[('log_info','=','')]}"
            >
                            <field name="log_info" />
                        </page>
                        <page
              string="Help"
              name="help_page"
              attrs="{'invisible': [('state', '=', 'done')]}"
            >
                            <group>
                                <div style="margin-top: 4px;">
                                    <h3>Help with Excel column names</h3>
                                    <p
                  >You must use this column names in order to fill the table:</p>
                                    <ul name="tutorial">
                                        <li><code>Partner Code</code>: this will fill <b
                      >Invoice Partner Code</b></li>
                                        <li><code>Partner Name</code>: this will fill <b
                      >Invoice Partner Name</b></li>
                                        <li><code>Ref</code>: this will fill <b
                      >Invoice Customer Ref</b></li>
                                        <li><code>Date</code>: this will fill <b
                      >Invoice Date</b></li>
                                        <li><code>Period Date</code>: this will fill <b
                      >Invoice Period Date</b></li>
                                        <li><code>Product Code</code>: this will fill <b
                      >Invoice Line Product Code</b></li>
                                        <li><code>Product Name</code>: this will fill <b
                      >Invoice Line Product Name</b></li>
                                        <li><code>Account Code</code>: this will fill <b
                      >Invoice Line Account Code</b></li>
                                        <li><code>Account Name</code>: this will fill <b
                      >Invoice Line Account Name</b></li>
                                        <li><code>Description</code>: this will fill <b
                      >Invoice Line Description</b></li>
                                        <li><code>Quantity</code>: this will fill <b
                      >Invoice Line Quantity</b></li>
                                        <li><code>Price Unit</code>: this will fill <b
                      >Invoice Line Price Unit</b></li>
                                    </ul>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="account_move_import_view_search" model="ir.ui.view">
        <field name="model">account.move.import</field>
        <field name="arch" type="xml">
            <search>
                <field name="file_date" />
                <filter
          name="pending"
          string="Pending"
          domain="[('state', '!=', 'done')]"
        />
                <filter
          name="finished"
          string="Done"
          domain="[('state', '=', 'done')]"
        />
                <filter
          name="errored"
          string="Error"
          domain="[('state', '=', 'error')]"
        />
                <group expand="0" string="Group By">
                    <filter
            string="Status"
            name="state_group"
            domain="[]"
            context="{'group_by':'state'}"
          />
                </group>
            </search>
        </field>
    </record>

    <record id="account_move_import_action" model="ir.actions.act_window">
        <field name="name">Import Account Moves</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move.import</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="action_jobapplication_application_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="account_move_import_view_tree"/>
        <field name="act_window_id" ref="account_move_import_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_jobapplication_application_form">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_move_import_view_form"/>
        <field name="act_window_id" ref="account_move_import_action"/>
    </record>

    <menuitem
    id="account_move_import_menu"
    action="account_move_import_action"
    parent="base_import_wizard.base_import_menu"
    sequence="10"
  />

    <menuitem
    id="account_move_import_contact_menu"
    action="account_move_import_action"
    parent="account.menu_analytic_accounting"
    sequence="15"
  />

</odoo>
