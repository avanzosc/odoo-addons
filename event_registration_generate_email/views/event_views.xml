<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='domain_settings']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="users_domain_setting">
                    <div class="o_setting_right_pane">
                        <label for="portal_user_default_domain"/><br/>
                        <span class="text-muted">example@</span><field name='portal_user_default_domain'/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
