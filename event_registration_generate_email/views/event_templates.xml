<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="registration_attendee_details_inherit" inherit_id="website_event.registration_attendee_details">
      <xpath expr="//div[hasclass('col-lg','my-2')][1]/label" position="replace">
          <label>Name and surname</label>
      </xpath>
      <xpath expr="//div[hasclass('col-lg','my-2')][2]" position="replace">
          <div class="col-lg my-2" style="display:none;">
              <label>Email <small>(Optional)</small></label>
              <input class="form-control" type="email" t-attf-name="#{counter}-email"/>
          </div>
      </xpath>
      <xpath expr="//div[hasclass('col-lg','my-2')][3]" position="attributes">
          <attribute name="style">display:none;</attribute>
      </xpath>
  </template>
</odoo>
