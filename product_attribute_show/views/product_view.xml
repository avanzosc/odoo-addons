<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="product_attribute_tree_view">
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.attribute_tree_view" />
        <field name="arch" type="xml">
            <field name="create_variant" position="after">
                <field name="attr_display"/>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="product_attribute_view_form">
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form" />
        <field name="arch" type="xml">
            <field name="create_variant" position="after">
                <field name="attr_display"/>
            </field>
            <xpath expr="//tree" position="inside">
                <field name="attr_display"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="variants_tree_view">
        <field name="model">product.attribute.value</field>
        <field name="inherit_id" ref="product.variants_tree_view" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="attr_display" />
            </field>
        </field>
    </record>
    <record id="attribute_group_tree_view" model="ir.ui.view">
        <field name="name">product.attribute.group.tree</field>
        <field name="model">product.attribute.group</field>
        <field name="arch" type="xml">
            <tree string="Product Attribute Groups">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="product_attribute_ids" widget="many2many_tags"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    <record id="product_attribute_group_view_form" model="ir.ui.view">
        <field name="name">product.attribute.group.form</field>
        <field name="model">product.attribute.group</field>
        <field name="arch" type="xml">
            <form string="Product Attribute Group">
                <group>
                    <group name="main_fields">
                        <label for="name" string="Group Name"/>
                        <field name="name" nolabel="1"/>
                        <field name="active"/>
                    </group>
                </group>
                <group name="product_attribute_ids">
                    <field name="product_attribute_ids" widget="many2many_tags"/>
                </group>
            </form>
        </field>
    </record>
    <record id="attribute_group_action" model="ir.actions.act_window">
        <field name="name">Attribute Groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.attribute.group</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
    </record>
    <menuitem id="menu_products_attribute_group_action"
        action="attribute_group_action"
        parent="sale.prod_config_main" groups="product.group_product_variant" sequence="2"/>
</odoo>
