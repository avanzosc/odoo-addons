<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_view_form" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_expiry.view_product_form_expiry" />
        <field name="arch" type="xml">
            <field name="use_expiration_date" position="attributes">
                <attribute name="attrs" />
            </field>
            <group name="expiry_and_lots" position="attributes">
                <attribute
          name="attrs"
        >{'invisible': [('use_expiration_date', '=', False)]}</attribute>
            </group>
        </field>
    </record>

    <record id="product_template_view_tree" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="groups_id" eval="[(4, ref('stock.group_production_lot'))]" />
        <field name="arch" type="xml">
            <field name="active" position="before">
                <field
          name="use_expiration_date"
          optional="hide"
          attrs="{'invisible': [('type', '=', 'consu')]}"
        />
                <field
          name="expiration_time"
          optional="hide"
          attrs="{'invisible': ['|',('type', '=', 'consu'),('use_expiration_date', '=', False)]}"
        />
                <field
          name="use_time"
          optional="hide"
          attrs="{'invisible': ['|',('type', '=', 'consu'),('use_expiration_date', '=', False)]}"
        />
                <field
          name="removal_time"
          optional="hide"
          attrs="{'invisible': ['|',('type', '=', 'consu'),('use_expiration_date', '=', False)]}"
        />
                <field
          name="alert_time"
          optional="hide"
          attrs="{'invisible': ['|',('type', '=', 'consu'),('use_expiration_date', '=', False)]}"
        />
            </field>
        </field>
    </record>
</odoo>
