<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_product_view_tree" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="groups_id" eval="[(4, ref('stock.group_production_lot'))]" />
        <field name="arch" type="xml">
            <field name="active" position="before">
                <field name="use_expiration_date" optional="hide" />
                <field name="expiration_time" optional="hide" />
                <field name="use_time" optional="hide" />
                <field name="removal_time" optional="hide" />
                <field name="alert_time" optional="hide" />
            </field>
        </field>
    </record>
</odoo>
