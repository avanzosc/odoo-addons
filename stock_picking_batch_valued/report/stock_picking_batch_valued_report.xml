<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_report_picking_batch_valued_report" model="ir.actions.report">
        <field name="name">Grouped picking valued</field>
        <field name="model">stock.picking.batch</field>
        <field name="report_type">qweb-pdf</field>
        <field
      name="report_name"
    >stock_picking_batch_valued.report_grouped_valued_picking</field>
        <field
      name="report_file"
    >stock_picking_batch_valued.report_grouped_valued_picking</field>
        <field
      name="binding_model_id"
      ref="stock_picking_batch.model_stock_picking_batch"
    />
        <field name="binding_type">report</field>
    </record>

    <template id="stock_picking_batch_valued.report_grouped_valued_picking">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t
          t-set="move_line_ids"
          t-value="o.picking_ids.mapped('move_line_ids')"
        />
                <t
          t-set="has_package"
          t-value="move_line_ids.filtered('result_package_id')"
          groups="stock.group_tracking_lot"
        />
                <t
          t-set="has_serial_number"
          t-value="move_line_ids.filtered('lot_id')"
          groups="stock.group_production_lot"
        />
                <t
          t-set="has_barcode"
          t-value="move_line_ids.mapped('product_id').filtered('barcode')"
        />
                <t t-set="locations" t-value="move_line_ids.mapped('location_id')" />
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-foreach="locations" t-as="location">
                            <t
                t-set="loc_move_line"
                t-value="move_line_ids.filtered(lambda x: x.location_id==location)"
              />
                            <t
                t-set="products"
                t-value="loc_move_line.mapped('product_id')"
              />
                            <h3><span t-field="o.name" /></h3>
                            <div>
                                <strong>Responsible:</strong>
                                <span t-if="o.user_id" t-field="o.user_id" />
                                <strong>Picking Date:</strong>
                                <span
                  t-if="o.scheduled_date"
                  class="m-0"
                  t-field="o.scheduled_date"
                  t-options='{"widget": "date"}'
                />
                            </div>
                            <br />
                            <h4><strong>To take from: <span
                    t-field="location.display_name"
                  /></strong></h4>
                            <t t-set="my_total" t-value="0" />
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th name="product">Product</th>
                                        <th
                      name="customer_reference"
                      width="27%"
                    >Customer reference</th>
                                        <th name="picking" width="23%">Picking</th>
                                        <th t-if="has_serial_number" width="15%">
                                            <strong>Lot/Serial Number</strong>
                                        </th>
                                        <th
                      t-if="has_barcode"
                      width="15%"
                      class="text-center"
                    >
                                            <strong>Product Barcode</strong>
                                        </th>
                                        <th t-if="has_package" width="15%">
                                            <strong>Package</strong>
                                        </th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="loc_move_line" t-as="move_operation">
                                        <td name="display_name">
                                            <span
                        t-field="move_operation.display_name"
                      />
                                        </td>
                                        <td name="sale_order_customer_reference">
                                            <span
                        t-esc="move_operation.sale_order_customer_reference"
                      />
                                        </td>
                                        <td name="picking">
                                            <span
                        t-esc="move_operation.mapped('picking_id').display_name"
                      />
                                        </td>
                                        <td
                      t-if="has_serial_number and (move_operation.lot_id or move_operation.lot_name)"
                      class="text-center h6"
                      width="15%"
                    >
                                            <img
                        t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', move_operation.lot_id.name, 600, 100)"
                        style="width:100%;height:35px;"
                        alt="Barcode"
                      />
                                        </td>
                                        <td
                      width="15%"
                      class="text-center"
                      t-if="has_barcode"
                    >
                                            <span
                        t-if="move_operation.product_id and move_operation.product_id.barcode"
                      >
                                                <img
                          t-if="len(move_operation.product_id.barcode) == 13"
                          t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', move_operation.product_id.barcode, 600, 100)"
                          style="width:100%;height:35px"
                          alt="Barcode"
                        />
                                                <img
                          t-elif="len(move_operation.product_id.barcode) == 8"
                          t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', move_operation.product_id.barcode, 600, 100)"
                          style="width:100%;height:35px"
                          alt="Barcode"
                        />
                                                <img
                          t-else=""
                          t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_operation.product_id.barcode, 600, 100)"
                          style="width:100%;height:35px"
                          alt="Barcode"
                        />

                                            </span>
                                        </td>
                                        <td t-if="has_package" width="15%">
                                            <span t-field="move_operation.package_id" />
                                            <t t-if="move_operation.result_package_id">
                                                 â†’ <span
                          t-field="move_operation.result_package_id"
                        />
                                            </t>
                                        </td>
                                        <td class="text-right">
                                            <t t-if="not has_package">
                                                <t
                          t-if="any(move_operation.filtered(lambda l: l.state == 'done'))"
                        >
                                                    <span
                            t-esc="sum(move_operation.mapped('qty_done'))"
                          />
                                                </t>
                                                <t t-else="">
                                                    <span
                            t-esc="sum(move_operation.mapped('product_uom_qty'))"
                          />
                                                </t>
                                            </t>
                                            <t t-if="has_package">
                                                <span
                          t-esc="sum(move_operation.mapped('qty_done'))"
                        />
                                            </t>
                                            <span
                        t-field="move_operation.uom_id"
                        groups="move_operation.group_uom"
                      />
                                        </td>
                                        <td name="price_unit" class="text-right">
                                            <span
                        t-esc="sum(move_operation.mapped('sale_price_unit'))"
                      />
                                        </td>
                                        <td name="price_subtotal" class="text-right">
                                            <t t-if="not has_package">
                                                <t
                          t-if="any(move_operation.filtered(lambda l: l.state == 'done'))"
                        >
                                                    <span
                            t-esc="sum(move_operation.mapped('qty_done')) * sum(move_operation.mapped('sale_price_unit'))"
                          />
                                                    <t
                            t-set="my_total"
                            t-value="my_total + (sum(move_operation.mapped('qty_done')) * sum(move_operation.mapped('sale_price_unit')))"
                          />
                                                </t>
                                                <t t-else="">
                                                    <span
                            t-esc="sum(move_operation.mapped('product_uom_qty')) * sum(move_operation.mapped('sale_price_unit'))"
                          />
                                                    <t
                            t-set="my_total"
                            t-value="my_total + (sum(move_operation.mapped('product_uom_qty')) * sum(move_operation.mapped('sale_price_unit')))"
                          />
                                                </t>
                                            </t>
                                            <t t-if="has_package">
                                                <span
                          t-esc="sum(move_operation.mapped('qty_done')) * sum(move_operation.mapped('sale_price_unit'))"
                        />
                                                <t
                          t-set="my_total"
                          t-value="my_total + (sum(move_operation.mapped('qty_done')) * sum(move_operation.mapped('sale_price_unit')))"
                        />
                                            </t>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div name="show_total" class="clearfix">
                                <div id="total" class="row">
                                    <div
                    t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto"
                  >
                                        <table class="table table-sm">
                                            <tr
                        name="my_subtotal"
                        class="border-black o_subtotal"
                        style=""
                      >
                                                <td
                          name="my_subtotal_total"
                          style="background-color: white; border-right: 0px !important;"
                        ><strong>Total</strong></td>
                                                <td
                          style="background-color: white; color:black; border-left: 0px !important;"
                          class="text-right"
                        >
                                                    <span
                            class="text-nowrap"
                            t-esc="'%.2f'% my_total"
                          />
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <p style="page-break-after: always;" />
                        </t>
                     </div>
                 </t>
             </t>
        </t>
    </template>
</odoo>
