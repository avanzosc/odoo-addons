<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath
        expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom_qty']"
        position="after"
      >
                <field name="product_packaging_qty" optional="show" />
                <field
          name="demand_product_packaging_qty"
          groups="product.group_stock_packaging"
          optional="hide"
        />
                <field name="palet_qty" optional="show" />
            </xpath>
            <xpath
        expr="//field[@name='move_ids_without_package']/tree/field[@name='quantity_done']"
        position="before"
      >
                <field
          name="done_product_packaging_qty"
          groups="product.group_stock_packaging"
          optional="hide"
        />
            </xpath>
        </field>
    </record>
</odoo>
