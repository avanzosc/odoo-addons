<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_partner_form_inh_inspection_partner" model="ir.ui.view">
            <field name="name">view.partner.form.inh.inspection.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="buttons" position="inside">
                    <button name="inspections_from_partner" type="object"
                            class="oe_inline oe_stat_button" icon="fa-bookmark-o">
                        <field string="# Inspections" name="inspections_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</openerp>
