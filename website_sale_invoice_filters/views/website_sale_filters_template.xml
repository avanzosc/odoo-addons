<odoo>

	<template id="assets_frontend"
		inherit_id="website.assets_frontend" name="Adding files">
		<xpath expr="." position="inside">
			<script type="text/javascript"
				src="/website_sale_invoice_filters/static/src/js/sale_website.js"></script>
			<script type="text/javascript"
				src="/website_sale_invoice_filters/static/src/js/common_website.js"></script>
			<link rel="stylesheet"
				href="/website_sale_invoice_filters/static/src/css/style.css" />
		</xpath>
	</template>
	
	<template id="website_sale_filters" name="Website sale filters" inherit_id="sale.portal_my_orders" customize_show="True">
            <xpath expr="//th[@class='text-right'][1]" position="before">
				<th class="text-right">Customer</th>
            </xpath>
            <xpath expr="//td[@class='text-right'][1]" position="before">
				<td class="text-right">
					<p style="display: none;"><t t-esc="order.partner_id.id"/></p>
					<t t-esc="order.partner_id.display_name"/>
				</td>
            </xpath>
            <xpath expr="//thead[1]" position="after">
				<div id="partner_customer_ids" style="display: none;">
					<ul>
						<t t-foreach="partner_customers" t-as="customer">
							<li>
								<p><t t-esc="customer.id" /></p>
								<p><t t-esc="customer.display_name" /></p>
							</li>
						</t>
					</ul>
				</div>
            </xpath>
    </template> 
</odoo>