<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_blog_open_invitations"
            model="ir.actions.act_window">
        <field name="name">Invited People</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="base.view_partner_tree" />
        <field name="search_view_id"
               ref="base.view_res_partner_filter" />
        <field name="help">See Invitations</field>
    </record>
    <record id="view_blog_blog_form" model="ir.ui.view">
        <field name="model">blog.blog</field>
        <field name="inherit_id" ref="website_blog.view_blog_blog_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="button_open_blog_invitations" type="object" class="oe_stat_button" icon="fa-map-marker">
                    <field name="invited_count" widget="statinfo" string="Invited People"/>
                </button>
            </div>
            <field name="website_id" position="after">
                <field name="education_center_ids" widget="many2many_tags"
                       domain="[('educational_category','=','school')]"/>
                <field name="education_course_ids" widget="many2many_tags"/>
                <field name="education_group_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>
    <record id="view_blog_post_form" model="ir.ui.view">
        <field name="model">blog.post</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="button_open_blog_invitations" type="object" class="oe_stat_button" icon="fa-map-marker">
                    <field name="invited_count" widget="statinfo" string="Invited People"/>
                </button>
            </div>
            <field name="write_date" position="after">
                <field name="education_center_ids" widget="many2many_tags"/>
                <field name="education_course_ids" widget="many2many_tags"/>
                <field name="education_category_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>
</odoo>
