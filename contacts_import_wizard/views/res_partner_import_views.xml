<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_partner_import_view_tree" model="ir.ui.view">
        <field name="model">res.partner.import</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state == 'done'" decoration-bf="state == 'pass'">
                <field name="name" />
                <field name="file_date" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="res_partner_import_view_form" model="ir.ui.view">
        <field name="model">res.partner.import</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
            name="action_import_file"
            string="Import"
            type="object"
            states="draft,2validate,pass,error"
          />
                    <button
            name="action_validate"
            string="Validate"
            type="object"
            states="2validate,error,pass"
          />
                    <button
            name="action_process"
            string="Process"
            type="object"
            states="pass"
          />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
              string="Import Lines"
              type="object"
              name="button_open_import_line"
              attrs="{'invisible':[('import_line_ids', '=', [])]}"
              class="oe_stat_button"
              icon="fa-bars"
            />
                        <button
              type="object"
              name="button_open_partner"
              attrs="{'invisible':[('partner_count', '=', 0)]}"
              class="oe_stat_button"
              icon="fa-folder-open"
            >
                            <field name="partner_count" widget="statinfo" />
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="filename" />
                            <field name="data" filename="filename" />
                            <field name="file_date" />
                        </group>
                        <group>
                            <field
                name="company_id"
                groups="base.group_multi_company"
                options="{'no_create': True}"
              />
                        </group>
                    </group>
                    <notebook>
                        <page string="Imported Lines">
                            <field name="import_line_ids" />
                        </page>
                        <page
              string="Error Log"
              attrs="{'invisible':[('log_info','=','')]}"
            >
                            <field name="log_info" />
                        </page>
                        <page
              string="Help"
              name="help_page"
              attrs="{'invisible': [('state', '=', 'done')]}"
            >
                        <div style="margin-top: 4px;">
                            <h3>Help with Excel column names</h3>
                            <p
                >You must use this column names in order to fill the table:</p>
                            <ul name="tutorial">
                                <li><code
                      t-translation="off"
                    >Name</code>: this will fill <b>Contact Name</b></li>
                                <li><code
                      t-translation="off"
                    >Trade Name</code>: this will fill <b>Contact Trade Name</b></li>
                                <li><code
                      t-translation="off"
                    >Parent</code>: this will fill <b>Contact Parent Name</b></li>
                                <li><code
                      t-translation="off"
                    >Type</code>: this will fill <b>Contact Type</b></li>
                                <li><code
                      t-translation="off"
                    >Company Type</code>: this will fill <b
                    >Company Type</b> The field must be:
                                    <ul>
                                        <li><code
                          t-translation="off"
                        >person</code> for <b>Individual</b>.</li>
                                        <li><code
                          t-translation="off"
                        >company</code> for <b>Company</b>.</li>
                                    </ul></li>
                                <li><code
                      t-translation="off"
                    >Code</code>: this will fill <b>Contact Reference</b></li>
                                <li><code
                      t-translation="off"
                    >VAT</code>: this will fill <b>Contact Tax ID</b></li>
                                <li><code
                      t-translation="off"
                    >Street</code>: this will fill <b>Contact Street</b></li>
                                <li><code
                      t-translation="off"
                    >Street2</code>: this will fill <b>Contact Street 2</b></li>
                                <li><code
                      t-translation="off"
                    >ZIP</code>: this will fill <b>Contact ZIP</b></li>
                                <li><code
                      t-translation="off"
                    >City</code>: this will fill <b>Contact City Name</b></li>
                                <li><code
                      t-translation="off"
                    >State</code>: this will fill <b>Contact State Name</b></li>
                                <li><code
                      t-translation="off"
                    >Country</code>: this will fill <b>Contact Country Name</b></li>
                                <li><code
                      t-translation="off"
                    >Phone</code>: this will fill <b>Contact Phone</b></li>
                                <li><code
                      t-translation="off"
                    >Mobile</code>: this will fill <b>Contact Mobile</b></li>
                                <li><code
                      t-translation="off"
                    >Email</code>: this will fill <b>Contact Email</b></li>
                                <li><code
                      t-translation="off"
                    >Website</code>: this will fill <b>Contact Website Link</b></li>
                                <li><code
                      t-translation="off"
                    >Comment</code>: this will fill <b>Contact Notes</b></li>
                                <li><code
                      t-translation="off"
                    >Function</code>: this will fill <b>Contact Function</b></li>
                            </ul>
                        </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="res_partner_import_view_search" model="ir.ui.view">
        <field name="model">res.partner.import</field>
        <field name="arch" type="xml">
            <search>
                <field name="file_date" />
                <filter
          name="pending"
          string="Pending"
          domain="[('state', '!=', 'done')]"
        />
                <filter
          name="finished"
          string="Done"
          domain="[('state', '=', 'done')]"
        />
                <filter
          name="errored"
          string="Error"
          domain="[('state', '=', 'error')]"
        />
                <group expand="0" string="Group By">
                    <filter
            string="Status"
            name="state_group"
            domain="[]"
            context="{'group_by':'state'}"
          />
                </group>
            </search>
        </field>
    </record>

    <record id="res_partner_import_action" model="ir.actions.act_window">
        <field name="name">Import Contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.import</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="res_partner_import_view_tree" />
    </record>

    <menuitem
    id="res_partner_import_menu"
    action="res_partner_import_action"
    parent="base_import_wizard.base_import_menu"
    sequence="10"
  />

    <menuitem
    id="contacts_import_menu"
    action="res_partner_import_action"
    parent="contacts.menu_contacts"
    sequence="10"
  />

</odoo>
