<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="action_sale_order_lines" model="ir.actions.act_window">
         <field name="name">Sales orders lines</field>
         <field name="type">ir.actions.act_window</field>
         <field name="res_model">sale.order.line</field>
         <field name="view_type">form</field>
         <field name="view_mode">tree,form</field>
         <field name="context">{}</field>
     </record>

    <menuitem id="menu_sale_order_line"
        name="Orders lines"
        action="action_sale_order_lines"
        parent="sale.sale_order_menu"
        sequence="2" groups="sales_team.group_sale_salesman"/>

    <record id="view_sales_order_line_filter" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_sales_order_line_filter" />
        <field name="arch" type="xml">
            <field name="order_id" position="before">
                <field name="order_partner_id"/>
            </field>
            <filter name="product" position="before">
                <filter string="Customer" name="group-customer" domain="[]" context="{'group_by':'order_partner_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
