<odoo>
    <data>
        <record
      id="wiz_recalculate_product_temp_sale_price_view_form"
      model="ir.ui.view"
    >
            <field name="model">wiz.recalculate.product.temp.sale.price</field>
            <field name="arch" type="xml">
                <form string="Recalculate sale price">
                    <group colspan="4">
                        <string
            >You are going to recalculate sale price in selected products. Are you sure? </string>
                    </group>
                    <footer>
                        <button
              string="Recalculate sale price"
              name="button_recalculate_product_sale_price"
              type="object"
              default_focus="1"
              class="btn-primary"
            />
                        <button
              string="Cancel"
              class="btn-secondary"
              special="cancel"
            />
                    </footer>
                </form>
            </field>
        </record>
        <act_window
      id="action_wiz_recalculate_product_temp_sale_price"
      multi="False"
      key2="client_action_multi"
      name="Recalculate sale price"
      res_model="wiz.recalculate.product.temp.sale.price"
      binding_model="product.template"
      view_mode="form"
      target="new"
      view_type="form"
      groups="product_sale_configuration.allow_change_sale_price"
    />
    </data>
</odoo>
