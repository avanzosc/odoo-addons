<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="wiz_recalculate_product_temp_sale_price_view_form" model="ir.ui.view">
    <field name="model">wiz.recalculate.product.temp.sale.price</field>
    <field name="arch" type="xml">
      <form string="Recalculate sale price">
        <group col="4">
          <div class="o_form_label">Para: You are going to recalculate sale price in selected products. Are you sure?</div>
        </group>
        <footer>
          <button string="Recalculate sale price" name="button_recalculate_product_sale_price" type="object" default_focus="1" class="btn-primary" />
          <button string="Cancel" class="btn-secondary" special="cancel" />
        </footer>
      </form>
    </field>
  </record>
  <record id="action_wiz_recalculate_product_temp_sale_price" model="ir.actions.act_window">
    <field name="name">Recalculate sale price</field>
    <field name="res_model">wiz.recalculate.product.temp.sale.price</field>
    <field name="binding_model_id" ref="model_product_template"/>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="view_type">form</field>
    <field name="groups" eval="[(6, 0, [ref('product_sale_configuration.allow_change_sale_price')])]"/>
  </record>
</odoo>