<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field eval="7" name="priority" />
        <field name="arch" type="xml">
            <field name="lst_price" position="attributes">
               <attribute
          name="attrs"
        >{'readonly': [('manual_pvp', '=', False)]}</attribute>
            </field>
        </field>
    </record>

    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="arch" type="xml">
            <field name="standard_price" position="before">
                <field name="base_cost" />
                <field name="extra_cost" />
            </field>
            <field name="standard_price" position="after">
                <field name="last_purchase_price" />
                <!-- <field name="last_supplier_invoice_price" /> -->
                <field name="target_cost" />
                <field name="percentage_between_costs" />
                <field name="manual_pvp" />
                <field
          name="product_category_sale_price_id"
          options="{'no_create': True, 'no_create_edit': True}"
        />
                <field name="lst_price" />
            </field>
        </field>
    </record>

    <record id="product_product_tree_view_inh_last_price" model="ir.ui.view">
        <field name="model">product.product</field>
        <field
      name="inherit_id"
      ref="purchase_last_price_info.product_product_tree_view"
    />
        <field name="arch" type="xml">
            <field name="last_purchase_price" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <!-- <record id="product_product_tree_view_inh_invoice_supplier" model="ir.ui.view">
        <field name="model">product.product</field>
        <field
      name="inherit_id"
      ref="invoice_supplier_last_price_info.product_product_tree_view"
    />
        <field name="arch" type="xml">
            <field name="last_supplier_invoice_price" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record> -->

    <record id="product_search_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view" />
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="product_category_sale_price_id" />
                <field name="target_cost" />
            </field>

            <filter name="activities_upcoming_all" position="after">
                <group expand="0" string="Group By">
                    <filter
            string="Product category sale price"
            name="group-product_category_sale_price_id"
            domain="[]"
            context="{'group_by':'product_category_sale_price_id'}"
          />
                    <filter
            string="Manual PSP"
            name="group-manual_pvp"
            domain="[]"
            context="{'group_by':'manual_pvp'}"
          />
                </group>
            </filter>
        </field>
    </record>
</odoo>
