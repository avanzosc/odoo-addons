<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_category_sale_price_view_tree" model="ir.ui.view">
        <field name="model">product.category.sale.price</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="percentage" />
                <field name="fixed_amount" />
            </tree>
        </field>
    </record>
    <record id="product_category_sale_price_view_search" model="ir.ui.view">
        <field name="model">product.category.sale.price</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>
    <record id="product_category_sale_price_view_form" model="ir.ui.view">
        <field name="model">product.category.sale.price</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="button_show_products" type="object"
                                class="oe_stat_button" icon="fa-th-list">
                            <field name="count_products" string="Products" widget="o_stat_value"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" nolabel="1"/>
                        </h1>
                    </div>
                    <group name="group1" colspan="4">
                        <group>
                            <field name="percentage" required="1"/>
                        </group>
                        <group>
                            <field name="fixed_amount" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_product_category_sale_price">
        <field name="name">Product categories sale price</field>
        <field name="res_model">product.category.sale.price</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="product_category_sale_price_view_tree" />
    </record>
    <menuitem id="product_category_sale_price_group_view"
            name="Product categories sale price"
            action="action_product_category_sale_price"
            parent="sale.prod_config_main"
            groups="product_sale_configuration.allow_change_sale_price"/>
</odoo>
