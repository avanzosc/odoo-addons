<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="priority">17</field>
        <field name="arch" type="xml">
            <xpath
        expr="//page[@name='general_information']/group[1]"
        position="attributes"
      >
               <attribute name="col">10</attribute>
            </xpath>
            <group name="group_general" position="attributes">
               <attribute name="colspan">4</attribute>
            </group>
            <group name="group_standard_price" position="attributes">
               <attribute name="colspan">6</attribute>
               <attribute name="col">4</attribute>
            </group>
            <field name="list_price" position="before">
                <field name="only_read_prices" colspan="4" invisible="1" />
                <field name="sale_configuration" colspan="4" invisible="1" />
            </field>
            <field name="list_price" position="after">
                <field
          name="manual_pvp"
          context="{'change_manual_pvp': True}"
          attrs="{'invisible': ['|', ('only_read_prices','=',True), ('product_variant_count', '&gt;', 1)]}"
        />
            </field>
            <field name="list_price" position="attributes">
               <attribute
          name="attrs"
        >{'readonly': [('manual_pvp', '=', False)]}</attribute>
            </field>
            <div name="standard_price_uom" position="attributes">
               <attribute name="attrs">{}</attribute>
               <attribute name="colspan">2</attribute>
               <attribute name="string">2</attribute>
            </div>
            <field name="standard_price" position="attributes">
               <attribute name="readonly">1</attribute>
            </field>
            <field name="company_id" position="attributes">
               <attribute name="colspan">4</attribute>
            </field>
            <field name="uom_id" position="attributes">
               <attribute name="colspan">4</attribute>
            </field>
            <field name="uom_po_id" position="attributes">
               <attribute name="colspan">4</attribute>
            </field>
            <field name="company_id" position="before">
                <field name="price_cost_changed" invisible="1" />
                <field
          name="base_cost"
          colspan="4"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)], 'readonly':[('cost_method','=','average')]}"
          widget="monetary"
          options="{'currency_field': 'currency_id'}"
        />
                <field
          name="extra_cost"
          colspan="4"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
          widget="monetary"
          options="{'currency_field': 'currency_id'}"
        />
                <field
          name="product_category_sale_price_id"
          colspan="4"
          options="{'no_create': True, 'no_create_edit': True}"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)], 'readonly':[('manual_pvp','=',True)]}"
        />
                <field
          name="target_cost"
          colspan="4"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)], 'readonly':[('manual_pvp','=',True)]}"
          widget="monetary"
          options="{'currency_field': 'currency_id'}"
        />
                <field
          name="percentage_between_costs"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
        />
                <field
          name="last_price_change_date"
          colspan="4"
          readonly="1"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
        />
                <field
          name="generate_last_price_change_date"
          colspan="4"
          invisible="1"
        />
                <field name="only_read_prices" colspan="4" invisible="1" />
                <field name="cost_method" colspan="4" invisible="1" />
                <field name="my_list_price" colspan="4" invisible="1" />
                <field name="my_standard_price" colspan="4" invisible="1" />
                <field
          name="new_extra_cost"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
        />
                <field
          name="last_change_date_new_extra_cost"
          colspan="4"
          readonly="1"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
        />
                <field
          name="new_target_cost"
          colspan="4"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
          context="{'change_new_target_data': True}"
        />
                <field
          name="new_product_category_sale_price_id"
          colspan="4"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
          options="{'no_create': True, 'no_create_edit': True}"
          context="{'change_new_target_data': True}"
        />
                <field
          name="new_sale_price"
          colspan="4"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)], 'readonly':[('manual_pvp','=',False)]}"
        />
                <field name="my_new_sale_price" colspan="4" invisible="1" />
                <field
          name="last_new_sale_price_change_date"
          colspan="4"
          readonly="1"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
        />
            </field>
        </field>
    </record>
