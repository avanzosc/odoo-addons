<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <record id="product_template_form_view" model="ir.ui.view">
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view" />
    <field name="priority">17</field>
    <field name="arch" type="xml">
      <field name="list_price" position="before">
        <field name="only_read_prices" invisible="1" />
        <field name="sale_configuration" invisible="1" />
      </field>
      <field name="list_price" position="after">
        <field
          name="manual_pvp"
          context="{'change_manual_pvp': True}"
          attrs="{'invisible': ['|', ('only_read_prices','=',True), ('product_variant_count', '&gt;', 1)]}"
        />
      </field>
      <field name="list_price" position="attributes">
        <attribute name="attrs">{'readonly': [('manual_pvp', '=', False)]}</attribute>
      </field>
      <div name="standard_price_uom" position="attributes">
        <attribute name="attrs">{}</attribute>
        <attribute name="colspan">2</attribute>
        <attribute name="string">2</attribute>
      </div>
      <label for="standard_price" position="attributes">
        <attribute name="invisible">1</attribute>
      </label>
      <div name="standard_price_uom" position="attributes">
        <attribute name="invisible">1</attribute>
      </div>

      <field name="invoice_policy" position="before">
          <field
          name="categ_id"
          on_change="1"
          modifiers="{&quot;required&quot;: true}"
          can_create="true"
          can_write="true"
        />
      </field>
      <label for="list_price" position="before">
        <label
          for="standard_price"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"
        />
        <div
          name="standard_price_uom"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"
        >
          <field
            name="standard_price"
            class="oe_inline"
            widget="monetary"
            options="{'currency_field': 'cost_currency_id', 'field_digits': True}"
          />
          <span groups="uom.group_uom">per
            <field name="uom_name" class="oe_inline" />
          </span>
        </div>
        <field
          name="base_cost"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)], 'readonly':[('cost_method','=','average')]}"
          widget="monetary"
          options="{'currency_field': 'currency_id'}"
        />
        <field
          name="extra_cost"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
          widget="monetary"
          options="{'currency_field': 'currency_id'}"
        />
        <field
          name="product_category_sale_price_id"
          options="{'no_create': True, 'no_create_edit': True}"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)], 'readonly':[('manual_pvp','=',True)]}"
        />
      </label>

      <field name="product_tag_ids" position="after">
        <field name="price_cost_changed" invisible="1" />
        <field
          name="target_cost"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)], 'readonly':[('manual_pvp','=',True)]}"
          widget="monetary"
          options="{'currency_field': 'currency_id'}"
        />
        <field
          name="percentage_between_costs"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
        />
        <field
          name="last_price_change_date"
          readonly="1"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
        />
        <field name="generate_last_price_change_date" invisible="1" />
        <field name="cost_method" invisible="1" />
        <field name="my_list_price" invisible="1" />
        <field name="my_standard_price" invisible="1" />
        <field
          name="new_extra_cost"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
        />
        <field
          name="last_change_date_new_extra_cost"
          readonly="1"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
        />
        <field
          name="new_target_cost"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
          context="{'change_new_target_data': True}"
        />
        <field
          name="new_product_category_sale_price_id"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
          options="{'no_create': True, 'no_create_edit': True}"
          context="{'change_new_target_data': True}"
        />
        <field
          name="new_sale_price"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)], 'readonly':[('manual_pvp','=',False)]}"
        />
        <field name="my_new_sale_price" invisible="1" />
        <field
          name="last_new_sale_price_change_date"
          readonly="1"
          attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"
        />
      </field>
    </field>
  </record>
</odoo>
