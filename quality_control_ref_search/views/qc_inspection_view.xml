<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="qc_inspection_tree_view_inh_refsearch" model="ir.ui.view">
        <field name="name">qc.inspection.tree.view.inh.refsearch</field>
        <field name="model">qc.inspection</field>
        <field name="inherit_id" ref="quality_control_oca.qc_inspection_tree_view" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="ref_model_name" />
                <field name="ref_name" />
            </field>
        </field>
    </record>
    <record id="qc_inspection_search_view_inh_refsearch" model="ir.ui.view">
        <field name="name">qc.inspection.search.view.inh.refsearch</field>
        <field name="model">qc.inspection</field>
        <field name="inherit_id" ref="quality_control_oca.qc_inspection_search_view" />
        <field name="arch" type="xml">
            <field name="object_id" position="replace">
                <field name="ref_name" />
            </field>
            <filter name="group_by_object_id" position="replace">
                <filter
        name="group_by_reference"
        string="Reference"
        domain="[]"
        help="Reference"
        context="{'group_by':'ref_model_name'}"
        />
            </filter>
        </field>
    </record>
</odoo>
