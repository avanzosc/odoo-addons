<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="building_use_view_tree" model="ir.ui.view">
        <field name="name">building.use.view.tree</field>
        <field name="model">building.use</field>
        <field name="arch" type="xml">
            <tree string="Building uses" editable="bottom" sample="1">
                <field name="name"/>
                <field name="is_industrial"/>
            </tree>
        </field>
    </record>

    <record id="building_use_action" model="ir.actions.act_window">
        <field name="name">Building uses</field>
        <field name="res_model">building.use</field>
        <field name="view_id" ref="building_use_view_tree"/>
    </record>

    <menuitem id="menu_customer_building"
                sequence="70"
                parent="contacts.res_partner_menu_config"
                name="Buildings">
        <menuitem id="menu_customer_building_use"
            name="Building uses"
            action="res_partner_building_use_section.building_use_action"
            sequence="10"/>
    </menuitem>

</odoo>
