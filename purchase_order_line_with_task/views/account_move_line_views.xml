<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_move_form_inh_line_task" >
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']" position="after">
                <field name="allowed_task_ids" invisible="1"/>
                <field name="task_id"
                    domain="[('id' ,'in', allowed_task_ids)]"/>
             </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_move_line_form_inh_line_task" >
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <field name="analytic_account_id" position="after">
                <field name="allowed_task_ids" invisible="1"/>
                <field name="task_id"
                    domain="[('id' ,'in', allowed_task_ids)]"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_move_line_tree_inh_line_task" >
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="analytic_account_id" position="after">
                <field name="allowed_task_ids" invisible="1"/>
                <field name="task_id"
                    domain="[('id' ,'in', allowed_task_ids)]"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_move_line_filter_inh_line_task" >
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="task_id"/>
            </field>
            <xpath expr="//group[1]/filter[1]" position="after">
                <filter name="groupbytask" string="Task" domain="[]" context="{'group_by':'task_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
