<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="invoice_supplier_form_inh_line_task" >
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_analytic_id']" position="after">
                <field name="allowed_task_ids" invisible="1"/>
                <field name="task_id"
                    domain="[('id' ,'in', allowed_task_ids)]"/>
             </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_invoice_line_tree_inh_line_task" >
        <field name="model">account.invoice.line</field>
        <field name="inherit_id" ref="account.view_invoice_line_tree"/>
        <field name="arch" type="xml">
            <field name="account_id" position="after">
                <field name="allowed_task_ids" invisible="1"/>
                <field name="task_id"
                    domain="[('id' ,'in', allowed_task_ids)]"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_invoice_line_form_inh_line_task" >
        <field name="model">account.invoice.line</field>
        <field name="inherit_id" ref="account.view_invoice_line_form"/>
        <field name="arch" type="xml">
            <field name="analytic_tag_ids" position="before">
                <field name="allowed_task_ids" invisible="1"/>
                <field name="task_id"
                    domain="[('id' ,'in', allowed_task_ids)]"/>
            </field>
        </field>
    </record>
</odoo>
