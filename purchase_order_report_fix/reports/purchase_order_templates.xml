            />
                        <t
              t-set="shipping_address"
              t-if="not o.dest_address_id"
              t-value="o.picking_type_id.warehouse_id.partner_id"
            />
                        <div
              t-esc="shipping_address"
              name="purchase_shipping_address"
              t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'
            />
                    </t>
                </div>
                <div class="col-5 offset-1" name="div_address">
                    <div
            t-field="o.partner_id"
            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'
