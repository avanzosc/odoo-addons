<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='production_lot_info']" position="after" >
                 <h2 id="schedule_info">In picking form</h2>
                 <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="div-show-stock-move_deno" >
                        <div class="o_setting_left_pane">
                            <field name="group_show_stock_move_deno"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_show_stock_move_deno"/>
                            <div class="text-muted">
                                It will show the description of the movement of stock on picking form.
                            </div>
                        </div>
                    </div>
                 </div>
            </xpath>
        </field>
    </record>
</odoo>
