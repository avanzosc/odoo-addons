<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="stock_inventory_import_line_view_tree" model="ir.ui.view">
        <field name="model">stock.inventory.import.line</field>
        <field
      name="inherit_id"
      ref="stock_inventory_import_wizard.stock_inventory_import_line_view_tree"
    />
        <field name="arch" type="xml">
            <field name="inventory_product_qty" position="after">
                <field name="inventory_product_cost" optional="show" />
                <field name="inventory_product_amount" optional="show" />
            </field>
        </field>
    </record>

    <record id="stock_inventory_import_line_view_form" model="ir.ui.view">
        <field name="model">stock.inventory.import.line</field>
        <field
      name="inherit_id"
      ref="stock_inventory_import_wizard.stock_inventory_import_line_view_form"
    />
        <field name="arch" type="xml">
            <field name="inventory_product_qty" position="after">
                <field name="inventory_product_cost" optional="show" />
                <field name="inventory_product_amount" optional="show" />
            </field>
        </field>
    </record>
</odoo>
