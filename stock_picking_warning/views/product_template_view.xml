<?xml version="1.0"?>
<openerp>
    <data>
        <record id="product_warning_form_view_inh_picking" model="ir.ui.view">
            <field name="name">product.warning.form.view.inh.picking</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="warning.product_warning_form_view"/>
            <field name="arch" type="xml">
                <group string="Warning when Purchasing this Product" position="after">
                    <group string="Warning in out pickings for this product">
                        <field name="out_picking_warn"/>
                        <field name="out_picking_warn_msg"
                            attrs="{'required':[('out_picking_warn','!=','no-message')],'readonly':[('out_picking_warn','=','no-message')]}"/>
                    </group>
                    <group string="Warning in in pickings for this product">
                        <field name="in_picking_warn"/>
                        <field name="in_picking_warn_msg"
                            attrs="{'required':[('in_picking_warn','!=','no-message')],'readonly':[('in_picking_warn','=','no-message')]}"/>
                    </group>
                </group>
            </field>
        </record>
    </data>
</openerp>
