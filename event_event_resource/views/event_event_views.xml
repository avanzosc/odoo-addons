<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_event_form" model="ir.ui.view">
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form" />
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="resource_id" domain="[('resource_type','=','material')]" />
            </field>
        </field>
    </record>

    <record id="view_event_tree" model="ir.ui.view">
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_tree" />
        <field name="arch" type="xml">
            <field name="company_id" position="before">
                <field name="resource_id" optional="show" />
            </field>
        </field>
    </record>

    <record id="view_event_search" model="ir.ui.view">
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_search" />
        <field name="arch" type="xml">
            <field name="stage_id" position="before">
                <field name="resource_id" />
            </field>
            <filter name="stage_id" position="before">
                <filter
          name="resource"
          string="Resource"
          context="{'group_by': 'resource_id'}"
        />
            </filter>
        </field>
    </record>
</odoo>
