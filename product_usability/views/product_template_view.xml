<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="product_tag_ids" position="before">
                <field
          name="incoming_qty"
          attrs="{'invisible':[('type', '!=', 'product')]}"
        />
                <field
          name="outgoing_qty"
          attrs="{'invisible':[('type', '!=', 'product')]}"
        />
                <field
          name="consumed_last_twelve_months"
          attrs="{'invisible':[('type', '!=', 'product')]}"
        />
                <field
          name="months_with_stock"
          attrs="{'invisible':[('type', '!=', 'product')]}"
        />
            </field>
        </field>
    </record>

    <record id="view_stock_product_template_tree" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_stock_product_template_tree" />
        <field name="arch" type="xml">
            <field name="virtual_available" position="after">
                <field
          name="incoming_qty"
          optional="show"
          attrs="{'invisible':[('type', '!=', 'product')]}"
        />
                <field
          name="outgoing_qty"
          optional="show"
          attrs="{'invisible':[('type', '!=', 'product')]}"
        />
                <field
          name="consumed_last_twelve_months"
          optional="show"
          attrs="{'invisible':[('type', '!=', 'product')]}"
        />
                <field
          name="months_with_stock"
          optional="show"
          attrs="{'invisible':[('type', '!=', 'product')]}"
        />
                <field name="main_seller_id" optional="show" />
                <field name="main_seller_price" optional="show" />
            </field>
        </field>
    </record>

    <record id="product_template_search_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view" />
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="main_seller_id" />
            </field>
            <filter name="categ_id" position="after">
                <filter
          string="Main Seller"
          name="main_seller"
          context="{'group_by':'main_seller_id'}"
        />
            </filter>
        </field>
    </record>
</odoo>
