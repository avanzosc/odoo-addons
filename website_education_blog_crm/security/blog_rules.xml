<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="education_blog_post_lead_portal_rule" model="ir.rule"
                forcecreate="True">
            <field name="name">Blog Post Lead: portal: published only</field>
            <field name="model_id" ref="website_blog.model_blog_post"/>
            <field name="domain_force">
                 ['|',
                '&amp;',
                ('future_students', '=', False),
                '|',
                ('invited_partner_ids', 'in', user.partner_id.progenitor_child_ids.ids),
                ('invited_partner_ids', 'in', user.partner_id.ids),
                '&amp;',
                ('future_students', '=', True),
                '|',
                ('invited_future_partner_ids', 'in', user.partner_id.progenitor_child_ids.ids),
                ('invited_future_partner_ids', 'in', user.partner_id.ids),]
            </field>
            <field name="groups"
                   eval="[(4, ref('base.group_portal')),(4, ref('base.group_user'))]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
        </record>
        <record id="education_blog_lead_portal_rule" model="ir.rule"
                forcecreate="True">
            <field name="name">Blog Lead: portal: published only</field>
            <field name="model_id" ref="website_blog.model_blog_blog"/>
            <field name="domain_force">
                ['|',
                '&amp;',
                ('future_students', '=', False),
                '|',
                ('invited_partner_ids', 'in', user.partner_id.progenitor_child_ids.ids),
                ('invited_partner_ids', 'in', user.partner_id.ids),
                '&amp;',
                ('future_students', '=', True),
                '|',
                ('invited_future_partner_ids', 'in', user.partner_id.progenitor_child_ids.ids),
                ('invited_future_partner_ids', 'in', user.partner_id.ids),]
            </field>
            <field name="groups"
                   eval="[(4, ref('base.group_portal')),(4, ref('base.group_user'))]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
        </record>
    </data>
</odoo>
