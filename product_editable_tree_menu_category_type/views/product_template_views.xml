<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="product_template_search_view" model="ir.ui.view">
         <field name="model">product.template</field>
         <field name="inherit_id" ref="product.product_template_search_view"/>
         <field name="arch" type="xml">
             <field name="categ_id" position="after">
                 <field name="template_category_type_id" optional="show"/>
             </field>
             <filter name="categ_id" position="after">
                <filter string="Category type" name="template_category_type_id"
                    context="{'group_by':'template_category_type_id'}"/>
             </filter>
         </field>
     </record>
    
     <record model="ir.ui.view" id="product_template_editable_tree_view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_editable_tree_menu.product_template_editable_tree_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="template_category_type_id" optional="show" readonly="1" />
            </field>
        </field>
     </record>
</odoo>
