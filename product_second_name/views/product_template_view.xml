<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="priority">17</field>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="allowed_location" />
                <field name="name2" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                <field name="description_sale_es" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                <field name="description_sale_cat" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                <field name="description_sale_en" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
            </field>
        </field>
    </record>
</odoo>
