<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_quant_tree" model="ir.ui.view">
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="product_brand_code" optional="show" readonly="1" />
                <field name="brand_fabricators" optional="show" readonly="1" />
            </field>
        </field>
    </record>

    <record id="view_stock_quant_tree_editable" model="ir.ui.view">
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="product_brand_code" optional="hide" />
                <field name="brand_fabricators" optional="hide" />
            </xpath>
        </field>
    </record>


    <record id="view_stock_quant_form_editable" model="ir.ui.view">
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_form_editable" />
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="product_brand_code" readonly="1" />
                <field name="brand_fabricators" readonly="1" />
            </field>
        </field>
    </record>

    <record id="quant_search_view" model="ir.ui.view">
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view" />
        <field name="arch" type="xml">
            <field name="owner_id" position="after">
                <field name="product_brand_code" />
                <field name="brand_fabricators" />
            </field>
        </field>
    </record>
</odoo>
