<odoo>
    <data noupdate="1">
        <!-- Server Action to set commitment date one week after order date -->
        <record id="action_set_commitment_date_one_week" model="ir.actions.server">
            <field name="name">Set Commitment Date + 1 Week</field>
            <field name="model_id" ref="sale.model_sale_order" />
            <field name="state">code</field>
            <field name="code">
                action = env['sale.order'].browse(env.context.get('active_ids')).set_commitment_date_one_week()
            </field>
        </record>
    </data>
</odoo>
