<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_employee_form_inh_associated_picking" model="ir.ui.view">
            <field name="name">view.employee.form.inh.associated.picking</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="pickings_from_employee" type="object"
                            class="oe_inline oe_stat_button" icon="fa-bookmark-o">
                        <field string="# Pickings" name="picking_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</openerp>
