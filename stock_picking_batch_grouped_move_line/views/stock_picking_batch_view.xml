<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="stock_picking_batch_form" model="ir.ui.view">
          <field name="model">stock.picking.batch</field>
          <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form" />
          <field name="arch" type="xml">
              <xpath expr="//notebook/page[1]" position="after">
                  <page
            string="Detailed operations grouped"
            attrs="{'invisible': [('state', '=', 'draft')]}"
          >
                       <field name="grouped_move_line_ids">
                           <tree>
                               <field name="pickings" optional="show" />
                               <field name="packages" optional="show" />
                               <field name="product_id" optional="show" />
                               <field name="lots" optional="show" />
                               <field name="owners" optional="show" />
                               <field name="qty_done" optional="show" />
                               <field name="product_uom_id" optional="show" />
                               <field name="location_id" optional="show" />
                               <field name="location_dest_id" optional="show" />
                               <field name="result_packages" optional="show" />
                           </tree>
                       </field>
                  </page>
              </xpath>
          </field>
      </record>
    </data>
</odoo>
