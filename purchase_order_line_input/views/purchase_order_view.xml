<?xml version="1.0" ?>
<odoo>
    <record model="ir.ui.view" id="purchase_order_kpis_tree">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree" />
        <field name="arch" type="xml">
            <field name="amount_total" position="after">
                <field
          name="price_subtotal_to_invoice"
          optional="hide"
          widget="monetary"
          groups="account.group_show_line_subtotals_tax_excluded"
        />
                <field
          name="price_total_to_invoice"
          optional="hide"
          widget="monetary"
          groups="account.group_show_line_subtotals_tax_included"
        />
                <field
          name="price_subtotal_to_receive"
          optional="hide"
          widget="monetary"
          groups="account.group_show_line_subtotals_tax_excluded"
        />
                <field
          name="price_total_to_receive"
          optional="hide"
          widget="monetary"
          groups="account.group_show_line_subtotals_tax_included"
        />
                <field
          name="price_subtotal_invoiced"
          optional="hide"
          widget="monetary"
          groups="account.group_show_line_subtotals_tax_excluded"
        />
                <field
          name="price_total_invoiced"
          optional="hide"
          widget="monetary"
          groups="account.group_show_line_subtotals_tax_included"
        />
                <field
          name="price_subtotal_received"
          optional="hide"
          widget="monetary"
          groups="account.group_show_line_subtotals_tax_excluded"
        />
                <field
          name="price_total_received"
          optional="hide"
          widget="monetary"
          groups="account.group_show_line_subtotals_tax_included"
        />
            </field>
        </field>
    </record>
</odoo>
