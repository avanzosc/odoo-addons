<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_production_lot_form" model="ir.ui.view">
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_copy_lineage_rates" string="Copy Lineage Rates" type="object"/>
                <field name="is_mother" invisible="1"/>
            </header>
            <label for="name" position="attributes">
                <attribute name="string">Code</attribute>
            </label>
            <field name="ref" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath expr="//sheet/group/group" position="after">
                <group>
                    <field name="is_mother"/>
                    <field name="operating_number" attrs="{'invisible': [('is_mother', '=', False)]}"/>
                    <field name="lineage_id" attrs="{'invisible': [('is_mother', '=', False)]}"/>
                    <field name="location_id" attrs="{'invisible': [('is_mother', '=', False)]}"/>
                    <field name="location_change_id" attrs="{'invisible': [('is_mother', '=', False)]}"/>
                    <field name="partner_id" attrs="{'invisible': [('is_mother', '=', False)]}"/>
                    </group>
            </xpath>
            <page name="description" position="before">
                <page name="date" string="Dates" attrs="{'invisible': [('is_mother', '=', False)]}">
                    <group>
                        <group>
                            <label for="start_date"/>
                            <div class="o_row">
                                <field name="start_date"/>
                                <field name="start_weeks"/>
                            </div>
                            <label for="start_laying_date"/>
                            <div class="o_row">
                                <field name="start_laying_date"/>
                                <field name="start_laying_weeks"/>
                            </div>
                            <label for="start_birth_date"/>
                            <div class="o_row">
                                <field name="start_birth_date"/>
                                <field name="start_birth_weeks"/>
                            </div>
                            <label for="change_house_date"/>
                            <div class="o_row">
                                <field name="change_house_date"/>
                                <field name="change_house_weeks"/>
                            </div>
                        </group>
                        <group>
                            <label for="end_rearing_date"/>
                            <div class="o_row">
                                <field name="end_rearing_date"/>
                                <field name="end_rearing_weeks"/>
                            </div>
                            <label for="end_laying_date"/>
                            <div class="o_row">
                                <field name="end_laying_date"/>
                                <field name="end_laying_weeks"/>
                            </div>
                            <label for="end_birth_date"/>
                            <div class="o_row">
                                <field name="end_birth_date"/>
                                <field name="end_birth_weeks"/>
                            </div>
                            <label for="closing_date"/>
                            <div class="o_row">
                                <field name="closing_date"/>
                                <field name="closing_weeks"/>
                            </div>
                        </group>
                        <group>
                            <field name="laying_correlation"/>
                            <field name="birth_correlation"/>
                        </group>
                        <group>
                            <field name="consumed_feed"/>
                        </group>
                    </group>
                </page>
                <page name='birth_rate' string='Birth Rate' attrs="{'invisible': [('is_mother', '=', False)]}">
                    <field name="birth_rate_ids">
                        <tree string="Birth Rate" editable="bottom">
                            <field name="week"/>
                            <field name="percentage_birth"/>
                        </tree>
                    </field>
                </page>
                <page name='laying_rate' string='Laying Rate' attrs="{'invisible': [('is_mother', '=', False)]}">
                    <field name="laying_rate_ids">
                        <tree string="Laying Rate" editable="bottom">
                            <field name="week"/>
                            <field name="percentage_laying"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>

    <record model="ir.ui.view" id="production_lot_mother_tree_view">
        <field name="name">stock.production.lot.tree.view</field>
        <field name="model">stock.production.lot</field>
        <field name="arch" type="xml">
            <tree string="Mother">
                <field name="name" decoration-bf="1" string="Code"/>
                <field name="is_mother" invisible="1"/>
                <field name="lineage_id" optional="hide"/>
                <field name="product_id" optional="show"/>
                <field name="location_id" optional="show"/>
                <field name="location_change_id" optional="show"/>
                <field name="partner_id" optional="show"/>
                <field name="create_date" optional="show"/>
                <field name="company_id" optional="show"/>
                <field name="state" optional="show" widget="badge" decoration-success="state == 'active'" decoration-info="state in ('new')" decoration-danger="state == 'inactive'"/>
            </tree>
        </field>
    </record>

    <record id="search_product_lot_filter" model="ir.ui.view">
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.search_product_lot_filter"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="lineage_id"/>
                <field name="location_id"/>
                <field name="location_change_id"/>
                <field name="partner_id"/>
                <field name="state"/>
                <filter string="Mother" name="mother" domain="[('is_mother','=',True)]"/>
                <filter string="Lot/Serial Number" name="serie_number" domain="[('is_mother','=',False)]"/>
            </field>
            <filter name="group_by_product" position="after">
                <filter string="Lineage" name="lineage" domain="[]" context="{'group_by': 'lineage_id'}"/>
                <filter string="Location" name="location" domain="[]" context="{'group_by': 'location_id'}"/>
                <filter string="Location Change" name="location_change" domain="[]" context="{'group_by': 'location_change_id'}"/>
                <filter string="Owner" name="partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                <filter string="State" name="state" domain="[]" context="{'group_by': 'state'}"/>
            </filter>
        </field>
    </record>

    <record id="action_copy_lineage_rates" model="ir.actions.server">
        <field name="name">Copy Lineage Rates</field>
        <field name="model_id" ref="stock.model_stock_production_lot"/>
        <field name="binding_model_id" ref="stock.model_stock_production_lot"/>
        <field name="state">code</field>
        <field name="code">
            for record in records:
                record.action_copy_lineage_rates()
        </field>
    </record>

    <record id="action_mother_view" model="ir.actions.act_window">
        <field name="name">Mother</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.production.lot</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stock_production_lot_mother.production_lot_mother_tree_view" />
        <field name="domain">[('is_mother','=',True)]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new mother
          </p>
        </field>
    </record>

    <menuitem action="action_mother_view" id="mother_menu"
              parent="stock.menu_stock_inventory_control" sequence="102"/>

</odoo>
