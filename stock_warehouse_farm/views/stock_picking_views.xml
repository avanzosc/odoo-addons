<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <group name="other_infos" position="inside">
                <label for="scheduled_date" />
                <div class="o_row">
                    <field
            name="scheduled_date"
            attrs="{'required': [('id', '!=', False)]}"
            decoration-warning="state not in ('done', 'cancel') and scheduled_date &lt; now"
            decoration-danger="state not in ('done', 'cancel') and scheduled_date &lt; current_date"
            decoration-bf="state not in ('done', 'cancel') and (scheduled_date &lt; current_date or scheduled_date &lt; now)"
          />
                    <field
            name="json_popover"
            widget="stock_rescheduling_popover"
            attrs="{'invisible': [('json_popover', '=', False)]}"
          />
                </div>
                <field
          name="date_deadline"
          attrs="{'invisible': ['|', ('state', 'in', ('done', 'cancel')), ('date_deadline', '=', False)]}"
          decoration-danger="date_deadline and date_deadline &lt; current_date"
          decoration-bf="date_deadline and date_deadline &lt; current_date"
        />
                <field
          name="date_done"
          string="Effective Date"
          attrs="{'invisible': [('state', '!=', 'done')]}"
        />
            </group>
            <label for="scheduled_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </label>
            <field name="scheduled_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="date_deadline" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="date_done" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <group name="other_infos" position="inside">
                <field name="category_type_id" />
                <field name="dest_category_type_id" />
            </group>
            <xpath
        expr="//form/sheet/notebook/page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='product_id']"
        position="after"
      >
                <field name="category_type_id" invisible="1" />
                <field name="dest_category_type_id" invisible="1" />
            </xpath>
            <xpath
        expr="//form/sheet/notebook/page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='product_id']"
        position="attributes"
      >
                <attribute
          name="domain"
        >['|', ('type_ids', '=', category_type_id), ('type_ids', '=', dest_category_type_id)]</attribute>
            </xpath>
        </field>
    </record>

    <record id="vpicktree" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="category_type_id" optional="hide" />
                <field name="dest_category_type_id" optional="hide" />
                <field name="batch_id" string="Picking Batch" optional="show" />
            </field>
        </field>
    </record>

    <record id="view_picking_internal_search" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="batch_id" string="Picking Batch" />
                <field name="category_type_id" />
                <field name="dest_category_type_id" />
            </field>
            <filter name="expected_date" position="after">
                <filter
          string="Picking Batch"
          name="batch"
          domain="[]"
          context="{'group_by': 'batch_id'}"
        />
                <filter
          string="Source Section"
          name="group_catogory_type"
          domain="[]"
          context="{'group_by': 'category_type_id'}"
        />
                <filter
          string="Dest. Section"
          name="group_dest_catogory_type"
          domain="[]"
          context="{'group_by': 'dest_category_type_id'}"
        />
            </filter>
        </field>
    </record>

</odoo>
