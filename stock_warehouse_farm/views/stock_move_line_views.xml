<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="stock_move_line_view_search" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.stock_move_line_view_search" />
        <field name="arch" type="xml">
            <field name="location_dest_id" position="after">
                <field name="category_type_id" />
                <field name="dest_category_type_id" />
            </field>
            <filter name="groupby_product_id" position="after">
                <filter
          string="Source Section"
          name="group_catogory_type"
          domain="[]"
          context="{'group_by': 'category_type_id'}"
        />
                <filter
          string="Dest. Section"
          name="group_dest_catogory_type"
          domain="[]"
          context="{'group_by': 'dest_category_type_id'}"
        />
            </filter>
        </field>
    </record>

    <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field
      name="inherit_id"
      ref="stock.view_stock_move_line_detailed_operation_tree"
    />
        <field name="arch" type="xml">
            <field name="product_id" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </field>
            <xpath expr="//field[@name='lot_id']" position="attributes">
                <attribute name="attrs" />
            </xpath>
            <field name="product_id" position="before">
                <field name="category_type_id" invisible="1" />
                <field name="dest_category_type_id" invisible="1" />
            </field>
            <field name="product_id" position="attributes">
                <attribute
          name="domain"
        >['|', ('type_ids', '=', category_type_id), ('type_ids', '=', dest_category_type_id)]</attribute>
            </field>
            <field name="location_id" position="attributes">
                <attribute
          name="domain"
        >[('usage', '!=', 'view'), ('id', 'child_of', parent.location_id), '|', ('company_id', '=', False), ('company_id', '=', company_id)]</attribute>
            </field>
            <field name="location_dest_id" position="attributes">
                <attribute
          name="domain"
        >[('usage', '!=', 'view'), ('id', 'child_of', parent.location_dest_id), '|', ('company_id', '=', False), ('company_id', '=', company_id)]</attribute>
            </field>
        </field>
    </record>

    <record id="view_move_line_form" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form" />
        <field name="arch" type="xml">
            <field name="reference" position="after">
                <field name="picking_id" />
            </field>
        </field>
    </record>

    <record id="view_move_line_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock_picking_batch.view_move_line_tree" />
        <field name="arch" type="xml">
            <field name="picking_id" position="after">
                <field name="date" />
            </field>
        </field>
    </record>

</odoo>
