<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_product_last_purchase_info_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field
      name="inherit_id"
      ref="purchase_last_price_info.product_product_last_purchase_info_form_view"
    />
        <field name="arch" type="xml">
            <group name="last_purchase_info" position="attributes">
                <attribute
          name="groups"
        >product_cost_visible.group_product_cost_visible</attribute>
            </group>
            <xpath expr="//page[@name='purchase']" position="attributes">
                <attribute
          name="groups"
        >base.group_user,product_cost_visible.group_product_cost_visible</attribute>
            </xpath>

        </field>
    </record>

    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field
      name="inherit_id"
      ref="purchase_last_price_info.product_product_tree_view"
    />
        <field name="arch" type="xml">
            <field name="last_purchase_price" position="attributes">
                <attribute
          name="groups"
        >product_cost_visible.group_product_cost_visible</attribute>
            </field>
            <field name="cost_price" position="attributes">
                <attribute
          name="groups"
        >product_cost_visible.group_commercial_permissions</attribute>
            </field>

        </field>
    </record>
</odoo>
