<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="product_supplierinfo_product_search_view">
            <field name="name">product.supplierinfo.product.search</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id"
                   ref="product_supplierinfo_view.product_supplierinfo_search_view" />
            <field name="arch" type="xml">
                <field name="product_tmpl_id" position="after">
                    <field name="product_id" />
                </field>
                <filter string="Product" position="after">
                    <filter string="Product (Variant)" domain="[]"
                            context="{'group_by':'product_id'}" />
                </filter>
            </field>
        </record>

        <record id="product_supplierinfo_prices_form_view" model="ir.ui.view">
            <field name="name">product.supplierinfo.prices.form</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id"
                   ref="product_supplierinfo_view.product_supplierinfo_prices_form_view" />
            <field name="arch" type="xml">
                <field name="product_tmpl_id" position="before">
                    <field name="product_id" />
                </field>
            </field>
        </record>

        <record id="product_supplierinfo_template_tree_view" model="ir.ui.view">
            <field name="name">product.supplierinfo.prices.tree</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id"
                   ref="product_supplierinfo_view.product_supplierinfo_template_tree_view" />
            <field name="arch" type="xml">
                <field name="product_tmpl_id" position="after">
                    <field name="product_id" />
                </field>
            </field>
        </record>

    </data>
</openerp>
