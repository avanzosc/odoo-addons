<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_event_registration_form" model="ir.ui.view">
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event.view_event_registration_form" />
        <field name="arch" type="xml">
            <button name="action_confirm" position="attributes">
                <attribute name="groups">event_registration_confirm_group.group_confirm_event_participants</attribute>
            </button>
       </field>
    </record>

    <record id="event_registration_action.event_registration_confirm_action" model="ir.actions.server">
        <field name="groups_id"
               eval="[(4, ref('event_registration_confirm_group.group_confirm_event_participants'))]" />
    </record>
    <record id="event_registration_action.event_registration_cancel_action" model="ir.actions.server">
        <field name="groups_id"
               eval="[(4, ref('event_registration_confirm_group.group_confirm_event_participants'))]" />
    </record>
    <record id="event_registration_action.event_registration_back2draft_action" model="ir.actions.server">
        <field name="groups_id"
               eval="[(4, ref('event_registration_confirm_group.group_confirm_event_participants'))]" />
    </record>
    <record id="event_sale_registration_action.event_registration_sale_confirm_action" model="ir.actions.server">
        <field name="groups_id"
               eval="[(4, ref('event_registration_confirm_group.group_confirm_event_participants'))]" />
    </record>
    <record id="event_sale_registration_action.event_registration_confirm_sale_action" model="ir.actions.server">
        <field name="groups_id"
               eval="[(4, ref('event_registration_confirm_group.group_confirm_event_participants'))]" />
    </record>
</odoo>
