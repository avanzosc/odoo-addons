<odoo>
    <data>
        <record id="wiz_product_product_recalculate_bom_cost_view_form" model="ir.ui.view">
            <field name="model">wiz.product.product.recalculate.bom.cost</field>
            <field name="arch" type="xml">
                <form string="Recalculate BoM cost in products">
                    <group colspan="4">
                        <string>You are going to recalculate base cost from the BoM. Are you sure?</string>
                    </group>
                    <footer>
                        <button string="Recalculate BoM cost"
                            name="button_recalculate_bom_cost"
                            type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_wiz_recalculate_product_product_sale_price"
            multi="False"
            key2="client_action_multi" name="Compute base cost from BoM"
            res_model="wiz.product.product.recalculate.bom.cost" src_model="product.product"
            view_mode="form" target="new" view_type="form"
            groups="product_sale_configuration.allow_change_sale_price"/>

        <delete model="ir.actions.server" id="mrp_bom_cost.action_compute_price_bom_product" />

    </data>
</odoo>
