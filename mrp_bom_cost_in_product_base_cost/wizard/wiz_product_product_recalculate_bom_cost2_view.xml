<odoo>
    <data>
        <record
      id="wiz_product_product_recalculate_bom_cost2_view_form"
      model="ir.ui.view"
    >
            <field name="model">wiz.product.product.recalculate.bom.cost2</field>
            <field name="arch" type="xml">
                <form string="Recalculate BoM cost in products">
                    <group colspan="4">
                        <string
            >You are going to recalculate base cost from the BoM. Are you sure?</string>
                    </group>
                    <footer>
                        <button
              string="Recalculate BoM cost"
              name="button_recalculate_bom_cost"
              type="object"
              default_focus="1"
              class="btn-primary"
            />
                        <button
              string="Cancel"
              class="btn-secondary"
              special="cancel"
            />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
