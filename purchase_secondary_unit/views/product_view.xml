<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_uop_form_view">
        <field name="name">product.template.uop.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="uom_po_id" position="after">
                <field name="uop_id" groups="product.group_uom" options="{'no_create': True}"/>
                <field name="uop_coeff" groups="product.group_uom" />
            </field>
        </field>
    </record>
</odoo>
