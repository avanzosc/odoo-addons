<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="stock_production_lot_status_tree_view" model="ir.ui.view">
            <field name="name">stock.production.lot.status.tree.view</field>
            <field name="model">stock.production.lot.status</field>
            <field name="arch" type="xml">
                <tree string="Lot states">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="stock_production_lot_status_search_view" model="ir.ui.view">
            <field name="name">stock.production.lot.status.search.view</field>
            <field name="model">stock.production.lot.status</field>
            <field name="arch" type="xml">
                <search string="Search lot status">
                    <field name="name" />
                </search>
            </field>
        </record>
        <record id="stock_production_lot_status_form_view" model="ir.ui.view">
            <field name="name">stock.production.lot.status.form.view</field>
            <field name="model">stock.production.lot.status</field>
            <field name="arch" type="xml">
                <form string="Lot status">
                    <sheet>
                        <h1>
                            <field name="name" class="oe_inline" nolabel="1"/>
                        </h1>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_stock_production_lot_status_view" model="ir.actions.act_window">
            <field name="name">Lot states</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.production.lot.status</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help">Create lot states</field>
        </record>
        <menuitem id="stock_production_lot_status_option_view" name="Lot states"
                  action="action_stock_production_lot_status_view" 
                  parent="stock.menu_stock_configuration"
                  groups="stock.group_production_lot"/>
    </data>
</openerp>

