<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="view_stock_quant_tree_inh_historical_state" model="ir.ui.view">
            <field name="name">view.stock.quant.tree.inh.historical.state</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree" />
            <field name="arch" type="xml">
                <field name="lot_id" position="after">
                    <field name="lot_status_id" groups="stock.group_production_lot"/>
                </field>
            </field>
        </record>
        <record id="quant_search_view_inh_historical_state" model="ir.ui.view">
            <field name="name">quant.search.view.inh.historical.state</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.quant_search_view" />
            <field name="arch" type="xml">
                <field name="lot_id" position="after">
                    <field name="lot_status_id" groups="stock.group_production_lot"/>
                </field>
                <filter string="Lot" position="after">
                    <filter string="Lot status" context="{'group_by' : 'lot_status_id'}"
                        groups="stock.group_production_lot"/>
                </filter>
            </field>
        </record>
        <record id="view_stock_quant_form_inh_historical_state" model="ir.ui.view">
            <field name="name">view.stock.quant.form.inh.historical.state</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_form" />
            <field name="arch" type="xml">
                <field name="lot_id" position="after">
                    <field name="lot_status_id" groups="stock.group_production_lot"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
