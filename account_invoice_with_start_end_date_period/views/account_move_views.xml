<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <filter name="due_date" position="after">
                <filter name="start_date_period" string="Start date period" date="start_date_period"/>
                <filter name="end_date_period" string="End date period" date="end_date_period"/>
            </filter>
            <filter name="duedate" position="after">
                <filter string="Start date period" name="startdateperiod" context="{'group_by': 'start_date_period'}"/>
                <filter string="End date period" name="enddateperiod" context="{'group_by': 'end_date_period'}"/>
            </filter>
        </field>
    </record>

    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_origin" position="before">
                <field name="start_date_period" />
                <field name="end_date_period" />
            </field>
        </field>
    </record>

    <record id="view_move_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <div name="journal_div" position="after">
                <field name="start_date_period" />
                <field name="end_date_period" />
            </div>
        </field>
    </record>

</odoo>
