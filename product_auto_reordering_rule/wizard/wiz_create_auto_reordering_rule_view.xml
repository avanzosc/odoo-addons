<odoo>
    <data>
        <record id="wiz_create_auto_reordering_rule_view_form" model="ir.ui.view">
            <field name="model">wiz.create.auto.reordering.rule</field>
            <field name="arch" type="xml">
                <form string="Create reordering rules">
                    <group colspan="4">
                        <string>You are going to create reordering rules. Are you sure? </string>
                    </group>
                    <group colspan="4">
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom"
                                    create="false" edit="false" delete="true">
                                <field name="wiz_id" invisible="1" />
                                <field name="location_id" />
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Create reordering rules"
                            name="button_create_reordering_rules"
                            type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_wiz_create_auto_reordering_rule"
            multi="False"
            key2="client_action_multi" name="Create reordering rules"
            res_model="wiz.create.auto.reordering.rule" src_model="product.product"
            view_mode="form" target="new" view_type="form"
            groups="base.group_system"/>
    </data>
</odoo>
