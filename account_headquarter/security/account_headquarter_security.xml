        <field name="model_id" ref="account.model_account_analytic_line" />
        <field
            name="domain_force"
        >['|', ('headquarter_id', '=', False), ('headquarter_id', 'in', user.headquarter_ids.ids)]</field>
    </record>
</odoo>
