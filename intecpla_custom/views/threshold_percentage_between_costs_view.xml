<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record
    id="threshold_percentage_between_costs_editable_tree_view"
    model="ir.ui.view"
  >
        <field name="name">threshold.percentage.between.costs.editable.tree.view</field>
        <field name="model">threshold.percentage.between.costs</field>
        <field name="arch" type="xml">
            <tree
        name="threshold"
        create="0"
        delete="0"
        string="Threshold percentage between costs"
        editable="bottom"
      >
                <field name="name" readonly="1" />
                <field name="threshold_percentage" />
            </tree>
        </field>
    </record>

    <record id="action_threshold_percentage_between" model="ir.actions.act_window">
        <field name="name">Threshold percentage between costs</field>
        <field name="res_model">threshold.percentage.between.costs</field>
        <field name="view_mode">tree</field>
        <field
      name="view_id"
      ref="intecpla_custom.threshold_percentage_between_costs_editable_tree_view"
    />
    </record>

    <menuitem
    id="menu_action_threshold_percentage_between"
    action="action_threshold_percentage_between"
    parent="stock.menu_product_in_config_stock"
    groups="sales_team.group_sale_manager"
    sequence="110"
  />
</odoo>
