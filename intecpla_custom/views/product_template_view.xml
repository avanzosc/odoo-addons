<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_form_view2" model="ir.ui.view">
        <field name="model">product.template</field>
        <field
      name="inherit_id"
      ref="invoice_supplier_last_price_info.product_template_form_view"
    />
        <field name="arch" type="xml">
            <group name="last_invoice_info" position="attributes">
                <attribute name="invisible">1</attribute>
            </group>
        </field>
    </record>

    <record id="product_template_last_purchase_info_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field
      name="inherit_id"
      ref="purchase_last_price_info.product_template_last_purchase_info_form_view"
    />
        <field name="arch" type="xml">
            <group name="last_purchase_info" position="attributes">
                <attribute name="invisible">1</attribute>
            </group>
        </field>
    </record>

    <record id="view_product_supplier_inherit" model="ir.ui.view">
        <field name="name">product.template.form.last.purchase.info</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="purchase.view_product_supplier_inherit" />
        <field name="arch" type="xml">
            <group name="vendors" position="before">
                <group>
                    <group>
                        <group string="Purchase" name="last_purchase_info2">
                            <field name="last_supplier_id" />
                            <field name="last_purchase_date" />
                            <field name="last_purchase_price" />
                        </group>
                    </group>
                    <group>
                        <group
              string="Last invoice Info"
              name="last_invoice_info_in_purchases"
            >
                            <field name="last_supplier_invoice_id" />
                            <field name="last_supplier_invoice_date" />
                            <field name="last_supplier_invoice_price" />
                        </group>
                    </group>
                </group>
            </group>
        </field>
    </record>
</odoo>
