<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_purchase_order_line_input_tree" model="ir.ui.view">
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase_order_line_input.view_purchase_order_line_input_tree"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="product_category"/>
            </field>
            <field name="product_uom_qty" position="after">
                <field name="standard_price" />
                <field name="standard_price_subtotal" sum="Total"/>
                <field name="last_purchase_price" />
                <field name="last_purchase_price_subtotal" sum="Total"/>
            </field>
        </field>
    </record>
</odoo>
