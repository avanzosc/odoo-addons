<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="wiz_change_teacher_calendar_event_form_view" model="ir.ui.view">
        <field name="model">wiz.change.teacher.calendar.event</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    Replace tutoring teacher
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="substitute_teacher_id" required="1"/>
                            <field name="from_date" required="1"/>
                            <field name="to_date" required="1"/>
                        </group>
                        <group/>
                    </group>
                    <label for="lines_ids" colspan="4"/>
                    <field name="lines_ids" nolabel="1" colspan="4" >
                        <tree name="tree-lines"
                              string="Teachers/Students to change"
                              create="0" editable="0" delete="1" >
                            <field name="wiz_id" invisible="True" />
                            <field name="tutor_per_year_id" invisible="True" />
                            <field name="academic_year_id" />
                            <field name="teacher_id" />
                            <field name="student_id" />
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button string="Change teacher"
                            name="change_teacher"
                            type="object"
                            default_focus="1"
                            class="btn-primary"
                            confirm="You are going to change teacher in tutoring meetings, are you sure?" />
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_change_teacher_calendar_event" model="ir.actions.act_window">
        <field name="name">Replace Teacher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wiz.change.teacher.calendar.event</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_school.model_hr_employee_supervised_year" />
    </record>

</odoo>
