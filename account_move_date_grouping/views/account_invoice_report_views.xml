<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_invoice_report_tree_info_inherit" model="ir.ui.view">
        <field name="name">account.invoice.report.tree.info</field>
        <field name="model">account.invoice.report</field>
        <field
      name="inherit_id"
      ref="account_invoice_line_report.view_invoice_report_tree_info"
    />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="invoice_month" optional="hide" />
                <field name="invoice_year" optional="hide" />
                <field name="invoice_quarter" optional="hide" />
            </xpath>
        </field>
    </record>
</odoo>
