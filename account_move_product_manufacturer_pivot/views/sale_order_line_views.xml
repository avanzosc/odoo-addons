<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_line_tree_inherit" model="ir.ui.view">
        <field
      name="name"
    >sale.order.line.tree.inherit.product.category.manufacturer</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="product_category_id" optional="show" />
                <field name="pivot_manufacturer_id" optional="show" />
            </xpath>
        </field>
    </record>
</odoo>
