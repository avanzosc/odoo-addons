<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_employee_form_inh_inspection_employee" model="ir.ui.view">
            <field name="name">view.employee.form.inh.inspection.employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="inspections_from_employee" type="object" class="oe_stat_button oe_inline" icon="fa-list">
                        <field name="inspections_count" widget="statinfo" string="# Inspections"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</openerp>
