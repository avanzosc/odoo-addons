<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_color_view_tree" model="ir.ui.view">
        <field name="model">product.color</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="product_color_action" model="ir.actions.act_window">
        <field name="name">Product Colors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.color</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="product_color_view_tree" />
    </record>

    <menuitem action="product_color_action"
              id="product_color_menu"
              parent="stock.menu_product_in_config_stock"
              sequence="15" />
</odoo>
