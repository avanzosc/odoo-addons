<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <th name="th_quantity" position="before">
            <th name="th_boxes_sacks" t-if="o.move_type == 'out_invoice'">
                <span>Packages</span>
            </th>
        </th>
        <xpath expr="//span[@t-field='line.quantity']/.." position="before">
            <td
        name="td_boxes_sacks"
        t-if="o.move_type == 'out_invoice'"
        class="text-center"
      >
                <span t-field="line.product_packaging_qty" />
            </td>
        </xpath>
    </template>
</odoo>
