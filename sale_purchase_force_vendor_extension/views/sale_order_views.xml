<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <group name="order_details" position="inside">
                <label for="vendor_id" />
                <div class="o_row">
                    <field
            name="vendor_id"
            options="{'no_open':True,'no_create': True}"
          />
                    <button
            name="update_vendor"
            type="object"
            string=" Update Vendor"
            class="btn-link mb-1 px-0"
            icon="fa-refresh"
            confirm="This will update all order lines with this vendor."
            attrs="{'invisible': ['|', ('vendor_id', '=', False), ('state', 'in', ['sale', 'done','cancel'])]}"
          />
                </div>
                <label for="route_id" />
                <div class="o_row">
                    <field
            name="route_id"
            options="{'no_open':True,'no_create': True}"
          />
                    <button
            name="update_route"
            type="object"
            string=" Update Route"
            help="Recompute all prices based on this pricelist"
            class="btn-link mb-1 px-0"
            icon="fa-refresh"
            confirm="This will update all order lines with this route."
            attrs="{'invisible': ['|', ('route_id', '=', False), ('state', 'in', ['sale', 'done','cancel'])]}"
          />
                </div>
            </group>

            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute
          name="context"
          operation="python_dict"
          key="default_vendor_id"
        >
                    vendor_id
                </attribute>
                <attribute
          name="context"
          operation="python_dict"
          key="default_route_id"
        >
                    route_id
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>
