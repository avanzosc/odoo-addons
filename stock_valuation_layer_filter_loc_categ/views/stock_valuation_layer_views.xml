<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_inventory_valuation_search" model="ir.ui.view">
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.view_inventory_valuation_search" />
        <field name="arch" type="xml">
            <field name="product_tmpl_id" position="after">
                <separator />
                <filter
          string="Remove locations"
          name="remove-locations"
          domain="[('not_show_location_in_inventory_reports', '=', False)]"
        />
                <filter
          string="Remove categories"
          name="remove-categories"
          domain="[('not_show_category_in_inventory_reports', '=', False)]"
        />
            </field>
        </field>
    </record>

    <record id="stock_valuation_layer_tree" model="ir.ui.view">
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree" />
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="not_show_location_in_inventory_reports" />
                <field name="not_show_category_in_inventory_reports" />
            </field>
        </field>
    </record>
</odoo>
