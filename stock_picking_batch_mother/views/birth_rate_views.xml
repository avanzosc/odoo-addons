<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="birth_rate_view_tree" model="ir.ui.view">
        <field name="name">birth.rate.tree</field>
        <field name="model">birth.rate</field>
        <field name="arch" type="xml">
            <tree string="Birth Rate" editable="top">
                <field name="mother_id" domain="[('batch_type', '=', 'mother')]" />
                <field name="lineage_id" domain="[('mother_ids', '=', mother_id)]" />
                <field name="week" />
                <field name="birth_start_date" />
                <field name="percentage_birth" />
                <field name="estimate_birth" />
                <field name="real_birth" />
            </tree>
        </field>
    </record>

    <record id="birth_rate_view_search" model="ir.ui.view">
        <field name="name">birth.rate.search</field>
        <field name="model">birth.rate</field>
        <field name="arch" type="xml">
            <search>
                <field name="mother_id" />
                <field name="lineage_id" />
                <filter string="Start Date" name="date" date="birth_start_date" />
                <filter
          string="Today"
          name="today"
          domain="[('birth_start_date', '=', context_today().strftime('%Y-%m-%d'))]"
        />
                <filter
          string="Last Week"
          name="week"
          domain="[('birth_start_date','&gt;', (context_today() - datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))]"
        />
                <filter
          string="Last Month"
          name="month"
          domain="[('birth_start_date','&gt;', (context_today() - datetime.timedelta(days=30)).strftime('%%Y-%%m-%%d'))]"
        />
                <filter
          string="Last Year"
          name="year"
          domain="[('birth_start_date','&gt;', (context_today() - datetime.timedelta(days=365)).strftime('%%Y-%%m-%%d'))]"
        />
                <group expand="0" string="Group By">
                    <filter
            string="Mother"
            name="mother"
            context="{'group_by':'mother_id'}"
          />
                    <filter
            string="Lineage"
            name="lineage"
            context="{'group_by':'lineage_id'}"
          />
                </group>
            </search>
        </field>
    </record>

    <record id="action_birth_rate_view" model="ir.actions.act_window">
        <field name="name">Birth Rate</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">birth.rate</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
    action="action_birth_rate_view"
    id="menu_view_birth_rate"
    parent="stock.menu_product_in_config_stock"
    sequence="6"
  />

</odoo>
