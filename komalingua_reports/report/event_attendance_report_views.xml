<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="event_attendance_report_pivot" model="ir.ui.view">
         <field name="model">event.attendance.report</field>
         <field name="inherit_id" ref="event_attendance_report.event_attendance_report_pivot"/>
         <field name="arch" type="xml">
             <field name="event_id" position="replace">
                <field name="event_name_without_day" type="row"/>
             </field>
         </field>
    </record>

    <record id="event_attendance_report_tree" model="ir.ui.view">
         <field name="model">event.attendance.report</field>
         <field name="inherit_id" ref="event_attendance_report.event_attendance_report_tree"/>
         <field name="arch" type="xml">
             <field name="event_id" position="replace">
                <field name="event_name_without_day" optional="show"/>
             </field>
         </field>
    </record>

    <record id="event_attendance_report_search" model="ir.ui.view">
        <field name="model">event.attendance.report</field>
        <field name="inherit_id" ref="event_attendance_report.event_attendance_report_search"/>
        <field name="arch" type="xml">
             <field name="event_id" position="replace">
                <field name="event_name_without_day" />
             </field>
            <filter name="event" position="replace">
                <filter string="Event" name="event" context="{'group_by':'event_name_without_day'}"/>
            </filter>
        </field>
    </record>
</odoo>
