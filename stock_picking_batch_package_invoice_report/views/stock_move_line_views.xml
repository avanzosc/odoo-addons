<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_line_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock_picking_batch.view_move_line_tree" />
        <field name="arch" type="xml">
            <field name="location_id" position="attributes">
                <attribute
          name="attrs"
        >{'readonly': [('state', '==', 'done')]}</attribute>
            </field>
            <field name="location_dest_id" position="attributes">
                <attribute
          name="attrs"
        >{'readonly': [('state', '==', 'done')]}</attribute>
            </field>
            <field name="package_id" position="attributes">
                <attribute
          name="attrs"
        >{'readonly': [('state', '==', 'done')]}</attribute>
            </field>
            <field name="result_package_id" position="attributes">
                <attribute
          name="attrs"
        >{'readonly': [('state', '==', 'done')]}</attribute>
            </field>
            <field name="qty_done" position="attributes">
                <attribute
          name="attrs"
        >{'readonly': [('state', '==', 'done')]}</attribute>
            </field>
            <field name="product_id" position="attributes">
                <attribute
          name="attrs"
        >{'readonly': ['|',('id', '!=', False),('state', '==', 'done')]}</attribute>
            </field>
            <field name="picking_id" position="attributes">
                <attribute
          name="attrs"
        >{'readonly': ['|',('id', '!=', False),('state', '==', 'done')]}</attribute>
            </field>
            <field name="lot_id" position="attributes">
                <attribute
          name="attrs"
        >{'readonly': ['|',('tracking', 'not in', ['lot', 'serial']),('state', '==', 'done')]}</attribute>
            </field>
            <field name="product_uom_qty" position="before">
                <field name="parcel_number" />
            </field>
        </field>
    </record>

    <record id="view_stock_move_line_operation_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
        <field name="arch" type="xml">
            <field name="product_uom_qty" position="before">
                <field name="parcel_number" />
            </field>
        </field>
    </record>

    <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field
      name="inherit_id"
      ref="stock.view_stock_move_line_detailed_operation_tree"
    />
        <field name="arch" type="xml">
            <field name="product_uom_qty" position="before">
                <field name="parcel_number" />
            </field>
        </field>
    </record>

    <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field
      name="inherit_id"
      ref="sale_order_package_usability.view_stock_move_line_detailed_operation_tree"
    />
        <field name="arch" type="xml">
            <field name="package_qty" position="attributes">
                <attribute name="sum">sum_package_qty</attribute>
            </field>
        </field>
    </record>
</odoo>
