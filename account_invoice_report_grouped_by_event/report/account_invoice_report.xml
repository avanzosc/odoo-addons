<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <data>
        <!-- QWeb Reports -->
        <record id="account_invoice_grouped_by_event" model="ir.actions.report">
            <field name="name">Invoices grouped by event</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field
        name="report_name"
      >account_invoice_report_grouped_by_event.report_invoice_grouped_by_event</field>
            <field
        name="report_file"
      >account_invoice_report_grouped_by_event.report_invoice_grouped_by_event</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field
        name="attachment"
      >(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move" />
            <field name="binding_type">report</field>
            <field
        name="groups_id"
        eval="[(4, ref('account.group_account_invoice')),
 (4, ref('account.group_account_readonly'))]"
      />
        </record>
    </data>

    <template id="report_invoice_grouped_by_event_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <t t-set="address">
                <address
          t-field="o.partner_id"
          t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'
        />
                <div t-if="o.partner_id.vat" class="mt16">
                    <t
            t-if="o.company_id.country_id.vat_label"
            t-esc="o.company_id.country_id.vat_label"
            id="inv_tax_id_label"
          />
                    <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat" /></div>
            </t>
            <div class="page">
                <h2>
                    <span
            t-if="o.move_type == 'out_invoice' and o.state == 'posted'"
          >Invoice</span>
                    <span
            t-if="o.move_type == 'out_invoice' and o.state == 'draft'"
          >Draft Invoice</span>
                    <span
            t-if="o.move_type == 'out_invoice' and o.state == 'cancel'"
          >Cancelled Invoice</span>
                    <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                    <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                    <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                    <span t-if="o.name != '/'" t-field="o.name" />
                </h2>

                <div id="informations" class="row mt32 mb32">
                    <div
            class="col-auto col-3 mw-100 mb-2"
            t-if="o.invoice_date"
            name="invoice_date"
          >
                        <strong>Invoice Date:</strong>
                        <p class="m-0" t-field="o.invoice_date" />
                    </div>
                    <div
            class="col-auto col-3 mw-100 mb-2"
            t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'"
            name="due_date"
          >
                        <strong>Due Date:</strong>
                        <p class="m-0" t-field="o.invoice_date_due" />
                    </div>
                    <div
            class="col-auto col-3 mw-100 mb-2"
            t-if="o.invoice_origin"
            name="origin"
          >
                        <strong>Source:</strong>
                        <p class="m-0" t-field="o.invoice_origin" />
                    </div>
                    <div
            class="col-auto col-3 mw-100 mb-2"
            t-if="o.partner_id.ref"
            name="customer_code"
          >
                        <strong>Customer Code:</strong>
                        <p class="m-0" t-field="o.partner_id.ref" />
                    </div>
                    <div
            class="col-auto col-3 mw-100 mb-2"
            t-if="o.ref"
            name="reference"
          >
                        <strong>Reference:</strong>
                        <p class="m-0" t-field="o.ref" />
                    </div>
                </div>

                <t
          t-set="display_discount"
          t-value="any(l.discount for l in o.invoice_line_ids)"
        />

                <table class="table table-sm o_main_table" name="invoice_line_table">
                    <thead>
                        <tr>
                            <th name="th_description" class="text-left"><span
                >Description</span></th>
                            <th name="th_quantity" class="text-right"><span
                >Quantity</span></th>
                            <th
                name="th_priceunit"
                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
              ><span>Unit Price</span></th>
                            <th name="th_taxes" class="text-right"><span
                >Taxes</span></th>
                            <th name="th_subtotal" class="text-right">
                                <span>Total Price</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t
              t-set="lines"
              t-value="o.invoice_line_ids.filtered(lambda l: l.event_id)"
            />
                        <t t-if="lines">
                            <t
                t-set="my_lines"
                t-value="lines.sorted(key=lambda l: (l.event_id.name, l.event_ticket_id.name, l.price_unit, l.tax_ids))"
              />
                            <t t-set="current_event" t-value="" />
                            <t t-set="current_ticket" t-value="" />
                            <t t-set="current_amount" t-value="" />
                            <t t-set="current_price_unit" t-value="" />
                            <t t-set="current_taxes" t-value="" />
                            <t t-set="current_price_subtotal" t-value="" />
                            <t t-set="total_evento" t-value="" />
                            <t t-foreach="my_lines" t-as="line">
                                <t
                  t-if="current_event and current_event == line.event_id"
                >
                                    <t t-if="current_ticket != line.event_ticket_id">
                                        <tr name="line1">
                                            <td name="line_name1">
                                                <t t-esc="current_ticket.name" />
                                            </td>
                                            <td
                        name="line_quantity1"
                        class="text-right"
                      >
                                                <t t-esc="current_amount" />
                                            </td>
                                            <td
                        name="line_price_unit1"
                        t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                      >
                                                <t t-esc="current_price_unit" />
                                            </td>
                                            <td
                        name="line_taxes1"
                        t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                      >
                                                <t
                          t-set="lit_taxes"
                          t-value="', '.join(map(lambda x: (x.description or x.name), current_taxes))"
                        />
                                                <t t-esc="lit_taxes" />
                                            </td>
                                            <td
                        name="line_price_subtotal1"
                        class="text-right o_price_total"
                      >
                                                <t t-esc="current_price_subtotal" />
                                            </td>
                                        </tr>
                                        <t
                      t-set="current_event"
                      t-value="line.event_id"
                    />
                                        <t
                      t-set="current_ticket"
                      t-value="line.event_ticket_id"
                    />
                                        <t
                      t-set="current_amount"
                      t-value="line.quantity"
                    />
                                        <t
                      t-set="current_price_unit"
                      t-value="line.price_unit"
                    />
                                        <t
                      t-set="current_taxes"
                      t-value="line.tax_ids"
                    />
                                        <t
                      t-set="current_price_subtotal"
                      t-value="line.price_subtotal"
                    />
                                        <t
                      t-set="total_evento"
                      t-value="total_evento + line.price_subtotal"
                    />
                                    </t>
                                    <t t-if="current_price_unit == line.price_unit">
                                        <t
                      t-set="current_ticket"
                      t-value="line.event_ticket_id"
                    />
                                        <t
                      t-set="current_amount"
                      t-value="current_amount + line.quantity"
                    />
                                        <t
                      t-set="current_price_subtotal"
                      t-value="current_price_subtotal + line.price_subtotal"
                    />
                                        <t
                      t-set="total_evento"
                      t-value="total_evento + line.price_subtotal"
                    />
                                    </t>
                                    <t t-if="current_price_unit != line.price_unit">
                                        <tr name="line2">
                                            <td name="line_name2">
                                                <t t-esc="current_ticket.name" />
                                            </td>
                                            <td
                        name="line_quantity2"
                        class="text-right"
                      >
                                                <t t-esc="current_amount" />
                                            </td>
                                            <td
                        name="line_price_unit2"
                        t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                      >
                                                <t t-esc="current_price_unit" />
                                            </td>
                                            <td
                        name="line_taxes2"
                        t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                      >
                                                <t
                          t-set="lit_taxes"
                          t-value="', '.join(map(lambda x: (x.description or x.name), current_taxes))"
                        />
                                                <t t-esc="lit_taxes" />
                                            </td>
                                            <td
                        name="line_price_subtotal2"
                        class="text-right o_price_total"
                      >
                                                <t t-esc="current_price_subtotal" />
                                            </td>
                                        </tr>
                                        <t
                      t-set="current_ticket"
                      t-value="line.event_ticket_id"
                    />
                                        <t
                      t-set="current_amount"
                      t-value="line.quantity"
                    />
                                        <t
                      t-set="current_price_unit"
                      t-value="line.price_unit"
                    />
                                        <t
                      t-set="current_taxes"
                      t-value="line.tax_ids"
                    />
                                        <t
                      t-set="current_price_subtotal"
                      t-value="line.price_subtotal"
                    />
                                        <t
                      t-set="total_evento"
                      t-value="total_evento + line.price_subtotal"
                    />
                                    </t>
                                </t>
                                <t
                  t-if="current_event and current_event != line.event_id"
                >
                                    <tr name="line3">
                                        <td name="line_name3">
                                            <t t-esc="current_ticket.name" />
                                        </td>
                                        <td name="line_quantity3" class="text-right">
                                            <t t-esc="current_amount" />
                                        </td>
                                        <td
                      name="line_price_unit3"
                      t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                    >
                                            <t t-esc="current_price_unit" />
                                        </td>
                                        <td
                      name="line_taxes3"
                      t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                    >
                                            <t
                        t-set="lit_taxes"
                        t-value="', '.join(map(lambda x: (x.description or x.name), current_taxes))"
                      />
                                            <t t-esc="lit_taxes" />
                                        </td>
                                        <td
                      name="line_price_subtotal3"
                      class="text-right o_price_total"
                    >
                                            <t t-esc="current_price_subtotal" />
                                        </td>
                                    </tr>
                                    <tr name="line4">
                                       <td name="line_name4" />
                                       <td name="line_quantity4" />
                                       <td name="line_price_unit4" />
                                       <td name="line_taxes4" />
                                       <td
                      name="line_price_subtotal5"
                      class="text-right o_price_total"
                    >
                                            <t t-esc="str(round(total_evento,2))" />
                                       </td>
                                    </tr>
                                    <tr name="line5">
                                       <td name="line_name5">
                                           <strong>
                                               <span t-field="line.event_id.name" />
                                           </strong>
                                       </td>
                                       <td name="line_quantity5" />
                                       <td name="line_price_unit5" />
                                       <td name="line_taxes5" />
                                       <td name="line_price_subtotal5" />
                                    </tr>
                                    <t t-set="current_event" t-value="line.event_id" />
                                    <t
                    t-set="current_ticket"
                    t-value="line.event_ticket_id"
                  />
                                    <t t-set="current_amount" t-value="line.quantity" />
                                    <t
                    t-set="current_price_unit"
                    t-value="line.price_unit"
                  />
                                    <t t-set="current_taxes" t-value="line.tax_ids" />
                                    <t
                    t-set="current_price_subtotal"
                    t-value="line.price_subtotal"
                  />
                                    <t
                    t-set="total_evento"
                    t-value="line.price_subtotal"
                  />
                                </t>
                                <t t-if="not current_event">
                                    <tr name="line6">
                                       <td name="line_name6">
                                           <strong>
                                               <span t-field="line.event_id.name" />
                                           </strong>
                                       </td>
                                       <td name="line_quantity6" />
                                       <td name="line_price_unit6" />
                                       <td name="line_taxes6" />
                                       <td name="line_price_subtotal6" />
                                    </tr>
                                    <t t-set="current_event" t-value="line.event_id" />
                                    <t
                    t-set="current_ticket"
                    t-value="line.event_ticket_id"
                  />
                                    <t t-set="current_amount" t-value="line.quantity" />
                                    <t
                    t-set="current_price_unit"
                    t-value="line.price_unit"
                  />
                                    <t t-set="current_taxes" t-value="line.tax_ids" />
                                    <t
                    t-set="current_price_subtotal"
                    t-value="line.price_subtotal"
                  />
                                    <t
                    t-set="total_evento"
                    t-value="line.price_subtotal"
                  />
                                </t>
                            </t>
                            <tr name="line6">
                                <td name="line_name6">
                                    <t t-esc="current_ticket.name" />
                                </td>
                                <td name="line_quantity6" class="text-right">
                                    <t t-esc="current_amount" />
                                </td>
                                <td
                  name="line_price_unit6"
                  t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                >
                                    <t t-esc="current_price_unit" />
                                </td>
                                <td
                  name="line_taxes6"
                  t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                >
                                    <t
                    t-set="lit_taxes"
                    t-value="', '.join(map(lambda x: (x.description or x.name), current_taxes))"
                  />
                                    <t t-esc="lit_taxes" />
                                </td>
                                <td
                  name="line_price_subtotal6"
                  class="text-right o_price_total"
                >
                                    <t t-esc="current_price_subtotal" />
                                </td>
                            </tr>
                            <tr name="line7">
                               <td name="line_name7" />
                               <td name="line_quantity7" />
                               <td name="line_price_unit7" />
                               <td name="line_taxes7" />
                               <td
                  name="line_price_subtotal7"
                  class="text-right o_price_total"
                >
                                    <t t-esc="str(round(total_evento,2))" />
                               </td>
                            </tr>
                        </t>
                     </tbody>
                </table>
                <div class="clearfix">
                    <div id="total" class="row">
                        <div
              t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto"
            >
                            <table
                class="table table-sm"
                style="page-break-inside: avoid;"
              >
                                <tr class="border-black o_subtotal" style="">
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed" />
                                    </td>
                                </tr>
                                <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                    <tr style="">
                                        <t
                      t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]"
                    >
                                            <td><span
                          class="text-nowrap"
                          t-esc="amount_by_group[0]"
                        /></td>
                                            <td class="text-right o_price_total">
                                                <span
                          class="text-nowrap"
                          t-esc="amount_by_group[3]"
                        />
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td>
                                                <span t-esc="amount_by_group[0]" />
                                                <span class="text-nowrap"> on
                                                    <t t-esc="amount_by_group[4]" />
                                                </span>
                                            </td>
                                            <td class="text-right o_price_total">
                                                <span
                          class="text-nowrap"
                          t-esc="amount_by_group[3]"
                        />
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr class="border-black o_total">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span
                      class="text-nowrap"
                      t-field="o.amount_total"
                    />
                                    </td>
                                </tr>
                                <t t-if="o.payment_state != 'invoicing_legacy'">
                                    <t
                    t-set="payments_vals"
                    t-value="o.sudo()._get_reconciled_info_JSON_values()"
                  />
                                    <t t-foreach="payments_vals" t-as="payment_vals">
                                        <tr>
                                            <td>
                                                <i
                          class="oe_form_field text-right oe_payment_label"
                        >Paid on <t
                            t-esc="payment_vals['date']"
                            t-options='{"widget": "date"}'
                          /></i>
                                            </td>
                                            <td class="text-right">
                                                <span
                          t-esc="payment_vals['amount']"
                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                        />
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="len(payments_vals) > 0">
                                        <tr class="border-black">
                                            <td><strong>Amount Due</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.amount_residual" />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <p
          t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference"
          name="payment_communication"
        >
                    Please use the following communication for your payment : <b><span
              t-field="o.payment_reference"
            /></b>
                </p>
                <p t-if="o.invoice_payment_term_id" name="payment_term">
                    <span t-field="o.invoice_payment_term_id.note" />
                </p>
                <p t-if="o.narration" name="comment">
                    <span t-field="o.narration" />
                </p>





                <div id="event-registrations" t-if="o.print_students">
                    <t
            t-set="events"
            t-value="o.event_ids.sorted(key=lambda l: (l.name))"
          />
                    <table
            class="table table-sm o_main_table"
            name="registrations_table"
          >
                        <thead>
                            <tr>
                                <th name="th_event" class="text-left"><span
                  >List of students by event</span></th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-foreach="events" t-as="event">
                                <tr name="line_event">
                                    <td name="line_event_name">
                                        <strong>
                                            <t t-esc="event.name" />
                                        </strong>
                                        <br />
                                        <t t-set="lit_reg" t-value="" />
                                        <t
                      t-set="registrations"
                      t-value="event.registration_ids.filtered(lambda x: x.student_id)"
                    />
                                        <t t-foreach="registrations" t-as="reg">
                                            <t
                        t-if="not o.start_date_period or (o.start_date_period and reg.real_date_start and o.start_date_period >= reg.real_date_start)"
                      >
                                                <t
                          t-if="not o.end_date_period or not reg.real_date_end or (o.end_date_period and reg.real_date_end and reg.real_date_end >= o.end_date_period)"
                        >
                                                    <t t-if="lit_reg">
                                                        <t
                              t-set="lit_reg"
                              t-value="lit_reg + '; ' + reg.student_id.name"
                            />
                                                    </t>
                                                    <t t-if="not lit_reg">
                                                        <t
                              t-set="lit_reg"
                              t-value="reg.student_id.name"
                            />
                                                    </t>
                                                </t>
                                            </t>
                                        </t>
                                        <strong>Students: </strong>
                                        <t t-esc="lit_reg" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>





                <p t-if="o.fiscal_position_id.note" name="note">
                    <span t-field="o.fiscal_position_id.note" />
                </p>
                <p t-if="o.invoice_incoterm_id" name="incoterm">
                    <strong>Incoterm: </strong><span
            t-field="o.invoice_incoterm_id.code"
          /> - <span t-field="o.invoice_incoterm_id.name" />
                </p>
                <div id="qrcode" t-if="o.display_qr_code">
                    <p t-if="qr_code_urls.get(o.id)">
                        <strong
              class="text-center"
            >Scan me with your banking app.</strong><br /><br />
                        <img
              class="border border-dark rounded"
              t-att-src="qr_code_urls[o.id]"
            />
                    </p>
                </div>
            </div>
        </t>
    </template>

    <template id="report_invoice_grouped_by_event">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t
          t-set="lang"
          t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"
        />
                <t
          t-call="account_invoice_report_grouped_by_event.report_invoice_grouped_by_event_document"
          t-lang="lang"
        />
            </t>
        </t>
    </template>
</odoo>
