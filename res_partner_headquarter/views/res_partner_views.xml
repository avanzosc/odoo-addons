<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='function']/.." position="after">
                <group>
                    <group>
                        <field name="parent_is_company" invisible="1" />
                        <field
              name="headquarter"
              attrs="{'invisible': [('parent_is_company', '=', False)]}"
            />
                    </group>
                    <group />
                </group>
            </xpath>
            <xpath
        expr="//field[@name='child_ids']/form//field[@name='comment']"
        position="before"
      >
                <field name="parent_is_company" invisible="1" />
                <field
          name="headquarter"
          attrs="{'invisible': [('parent_is_company', '=', False)]}"
        />
            </xpath>
        </field>
    </record>

    <record id="view_partner_simple_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_simple_form" />
        <field name="arch" type="xml">
            <field name="mobile" position="after">
                <field name="parent_is_company" invisible="1" />
                <field
          name="headquarter"
          attrs="{'invisible': [('parent_is_company', '=', False)]}"
        />
            </field>
        </field>
    </record>

    <record id="res_partner_view_form_private" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_view_form_private" />
        <field name="arch" type="xml">
            <field name="country_id" position="after">
                <field name="parent_is_company" invisible="1" />
                <field
          name="headquarter"
          attrs="{'invisible': [('parent_is_company', '=', False)]}"
        />
            </field>
        </field>
    </record>

    <record id="view_partner_address_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_address_form" />
        <field name="arch" type="xml">
            <field name="country_id" position="after">
                <field name="parent_is_company" invisible="1" />
                <field
          name="headquarter"
          attrs="{'invisible': [('parent_is_company', '=', False)]}"
        />
            </field>
        </field>
    </record>
</odoo>
