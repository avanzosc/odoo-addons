<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_move_line_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock_picking_batch.view_move_line_tree" />
        <field name="arch" type="xml">
            <field name="lot_id" position="attributes">
                <attribute
          name="attrs"
        >{'readonly': [('tracking', 'not in', ['lot', 'serial'])]}</attribute>
            </field>
            <field name="lot_id" position="after">
                <field name="lineage_id" optional="show" />
            </field>
            <field name="company_id" position="after">
                <field
          name="state"
          optional="show"
          widget="badge"
          decoration-success="state == 'done'"
          decoration-info="state not in ('done', 'cancel')"
        />
            </field>
        </field>
    </record>

    <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field
      name="inherit_id"
      ref="stock.view_stock_move_line_detailed_operation_tree"
    />
        <field name="arch" type="xml">
            <field name="lot_id" position="attributes">
                <attribute
          name="attrs"
        >{'readonly': [('tracking', 'not in', ['lot', 'serial'])]}</attribute>
            </field>
            <field name="lot_id" position="after">
                <field name="tracking" invisible="1" />
                <field
          name="lineage_id"
          optional="hide"
          attrs="{'column_invisible':[('parent.batch_id', '=', False)]}"
        />
            </field>
        </field>
    </record>

    <record id="stock_move_line_view_search" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.stock_move_line_view_search" />
        <field name="arch" type="xml">
            <filter name="groupby_product_id" position="after">
                <filter
          string="Product Category"
          name="groupby_product_categ"
          domain="[]"
          context="{'group_by': 'product_category_id'}"
        />
            </filter>
        </field>
    </record>
</odoo>
