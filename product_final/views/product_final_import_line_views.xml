<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_final_import_line_view_form" model="ir.ui.view">
        <field name="model">product.final.import.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_validate"
                        string="Validate"
                        type="object"
                        class="oe_read_only"
                        states="2validate,error"
                    />
                    <button
                        name="action_process"
                        string="Process"
                        type="object"
                        class="oe_read_only"
                        states="pass"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <field name="product_final_code" />
<!--                        <field name="product_final_name" />-->
                        <field
                            name="product_final_id"
                            options="{'no_create': True, 'no_open': True}"
                        />
                        <field name="position" />
                        <field name="product_default_code" />
<!--                        <field name="product_name" />-->
                        <field
                            name="product_id"
                            options="{'no_create': True, 'no_open': True}"
                        />
                    </group>
                    <field name="comments" />
                    <field name="log_info" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_final_import_line_view_tree" model="ir.ui.view">
        <field name="model">product.final.import.line</field>
        <field name="arch" type="xml">
            <tree
                decoration-danger="state == 'error'"
                decoration-muted="state == 'done'"
                decoration-it="log_info"
                editable="top"
            >
                <field name="product_final_code" />
<!--                <field name="product_final_name" />-->
                <field
                    name="product_final_id"
                    options="{'no_create': True, 'no_open': True}"
                />
                <field name="position" />
                <field name="product_default_code" />
<!--                <field name="product_name" />-->
                <field
                    name="product_id"
                    options="{'no_create': True, 'no_open': True}"
                />
                <field name="comments" />
                <field name="state" />
                <field name="change_comments" />
                <field name="log_info" invisible="True" />
            </tree>
        </field>
    </record>

    <record id="product_final_import_line_action" model="ir.actions.act_window">
        <field name="name">Import Final Product Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.final.import.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="product_final_import_line_view_tree" />
    </record>
</odoo>
