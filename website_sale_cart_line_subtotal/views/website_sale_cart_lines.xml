<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="website_sale_cart_lines_inherit" inherit_id="website_sale.cart_lines">
        <xpath expr="//thead//th[4]" position="after">
            <th>Price Subtotal</th>
        </xpath>
        <xpath expr="//tbody//td[@name='price']" position="after">
            <td>
                <span
          style="white-space: nowrap;"
          t-esc="line.product_uom_qty * combination_info['list_price']"
          t-options="{'widget': 'monetary', 'display_currency': website_sale_order.currency_id}"
        />
            </td>
        </xpath>
    </template>
</odoo>
