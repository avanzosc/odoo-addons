<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="account_invoice_view_form" >
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='account_analytic_id']" position="after">
                <field name="allowed_task_ids" invisible="1"/>
                <field name="task_id"
                       domain="[('id' ,'in', allowed_task_ids)]"/>
             </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="account_invoice_view_supplier_form" >
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='account_analytic_id']" position="after">
                <field name="allowed_task_ids" invisible="1"/>
                <field name="task_id"
                       domain="[('id' ,'in', allowed_task_ids)]"/>
             </xpath>
        </field>
    </record>
</odoo>
