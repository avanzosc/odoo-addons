<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath
        expr="//page[@name='products']/field[@name='order_line']/tree"
        position="attributes"
      >
                <attribute name="context">{'default_order_id':active_id}</attribute>
            </xpath>
            <xpath
        expr="//page[@name='products']/field[@name='order_line']/tree/field[@name='product_id']"
        position="attributes"
      >
                <attribute
          name="domain"
        >[('product_id_computed', '=', parent.partner_id)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
