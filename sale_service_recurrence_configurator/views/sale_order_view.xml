<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_order_form_inh_mwd">
            <field name="name">view.order.form.inh.mwd</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_lines']/.." position="before">
                    <field name="recurring_service" invisible="1" />
                    <group name="group_month_week_day" colspan="4" col="6"
                           attrs="{'invisible': [('recurring_service','=',False)]}">
                       <group name="group_month" colspan="2">
                           <field name="january" />
                           <field name="february" />
                           <field name="march" />
                           <field name="april" />
                           <field name="may" />
                           <field name="june" />
                           <field name="july" />
                           <field name="august" />
                           <field name="september" />
                           <field name="october" />
                           <field name="november" />
                           <field name="december" />
                       </group>
                       <group name="group_week" colspan="2">
                           <field name="week1" />
                           <field name="week2" />
                           <field name="week3" />
                           <field name="week4" />
                           <field name="week5" />
                       </group>
                       <group name="group_day" colspan="2" >
                           <field name="monday" />
                           <field name="tuesday" />
                           <field name="wednesday" />
                           <field name="thursday" />
                           <field name="friday" />
                           <field name="saturday" />
                           <field name="sunday" />
                       </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
