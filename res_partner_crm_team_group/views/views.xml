<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_crm_team_group_form" model="ir.ui.view">
        <field name="name">crm.team.group.form</field>
        <field name="model">crm.team.group</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="user_id"/>
                </group>
                <notebook>
                    <page string="Teams">
                        <group>
                            <field name="team_ids"
                                   widget="one2many_list"/>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_crm_team_group_tree">
        <field name="name">crm.team.group.tree</field>
        <field name="model">crm.team.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_team_view_form">
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <group name="right" position="inside">
                <field name="group_id"/>
            </group>
        </field>
    </record>

    <record id="sales_team_group_config_action" model="ir.actions.act_window">
        <field name="name">Sales Team Groups</field>
        <field name="res_model">crm.team.group</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="sales_team_group_config" name="Sales Team Groups"
            parent="sale.menu_sale_config"
            action="res_partner_crm_team_group.sales_team_group_config_action"
            sequence="2"/>
</odoo>
