<odoo>
    <record id="wiz_desassign_shelf_form_view" model="ir.ui.view">
        <field name="model">wiz.desassign.shelf</field>
        <field name="arch" type="xml">
            <form string="Select shelves to deallocate" >
                <group colspan="4">
                    <field name="partner_id" colspan="4" invisible="1"/>
                    <field name="desassign_shelf_ids" colspan="4" nolabel="1">
                        <tree editable="bottom"
                            create="false" edit="false" delete="true">
                            <field name="company_name" readonly="1"/>
                            <field name="shelf_name" readonly="1"/>
                            <field name="assigned_date" readonly="1"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="deallocate" name="button_deallocate" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
