<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <menuitem name="Locker rooms" id="locker_room_menuitem"
              web_icon="partner_locker_room,static/description/icon.png"
              groups="partner_locker_room.locker_room_user"/>

    <record id="partner_locker_room_view_tree" model="ir.ui.view">
        <field name="model">partner.locker.room</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id" />
                <field name="code" />
                <field name="name" />
                <field name="minimum_number" />
                <field name="maximum_number" />
            </tree>
        </field>
    </record>
    <record id="partner_locker_room_view_search" model="ir.ui.view">
        <field name="model">partner.locker.room</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id" />
                <field name="code" />
                <field name="name" />
                <group expand="0" string="Group By">
                   <filter string="Company" name="group-company" domain="[]" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="partner_locker_room_view_form" model="ir.ui.view">
        <field name="model">partner.locker.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group name="group1" colspan="4">
                        <group>
                            <field name="partner_id"
                                domain="[('valid_for_locker_room','=',True)]"/>
                            <field name="code" required="1"/>
                        </group>
                        <group>
                            <field name="minimum_number" required="1"/>
                            <field name="maximum_number" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_partner_locker_room">
        <field name="name">Locker rooms</field>
        <field name="res_model">partner.locker.room</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="partner_locker_room_view_tree" />
    </record>
    <menuitem id="partner_locker_room_group_view" name="Locker rooms"
            action="action_partner_locker_room"
            parent="locker_room_menuitem"/>
</odoo>
