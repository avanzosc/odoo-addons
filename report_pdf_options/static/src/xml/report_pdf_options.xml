<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="print_attachment_options.button_options">
        <div style="text-align:center;">
            <div class="btn-group" role="group">
                <button id="btn-pdf-print" class="btn btn-info btn-pdf" data-option-pdf="print">
                    <i class="fa fa-print"/>
                    <span>Print</span>
                </button>
                <button id="btn-pdf-download" class="btn btn-info btn-pdf" data-option-pdf="download">
                    <i class="fa fa-download"/>
                    <span>Download</span>
                </button>
                <button id="btn-pdf-open" class="btn btn-info btn-pdf" data-option-pdf="open">
                    <i class="fa fa-file-text"/>
                    <span>Open</span>
                </button>
            </div>
        </div>
    </t>
</templates>
