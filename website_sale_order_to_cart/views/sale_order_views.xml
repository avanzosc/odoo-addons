<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']/../.." position="after">
                <group>
                    <field name="is_abandoned_cart" />
                </group>
            </xpath>
            <xpath expr="//header" position="inside">
                <button
          name="action_quotation_mark_send"
          string="Quotation Mark Sent"
          type="object"
          class="btn-primary"
          attrs="{'invisible': [('state', '!=', 'draft')]}"
        />
                <button
          name="sale_order_to_cart"
          string="Sale Order To Cart"
          type="object"
          class="btn-primary"
          attrs="{'invisible': [('state', '!=', 'sent')]}"
        />
            </xpath>
        </field>
    </record>

    <record id="view_sale_order_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="is_abandoned_cart" optional="show" />
            </xpath>
        </field>
    </record>

    <record id="view_quotation_tree_with_onboarding_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="is_abandoned_cart" optional="show" />
            </xpath>
        </field>
    </record>

    <record id="view_quotation_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="is_abandoned_cart" optional="show" />
            </xpath>
        </field>
    </record>
</odoo>
