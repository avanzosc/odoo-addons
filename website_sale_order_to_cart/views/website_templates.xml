<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="custom_cart_inherit" inherit_id="website_sale.cart">
        <xpath expr="//div[hasclass('justify-content-between')]" position="after">
            <t t-if="website_sale_order.id">
                <div class="d-flex justify-content-center">
                    <div>
                        <a
              class="btn btn-primary mb32"
              role="button"
              t-att-href="'/confirm_sale_order?order_id=' + str(website_sale_order.id)"
            >
                            <span>Confirmar Carro</span>
                        </a>
                    </div>
                </div>
            </t>
        </xpath>
    </template>

    <template
    id="sale_order_portal_template_inherit"
    inherit_id="sale.sale_order_portal_template"
  >
        <xpath expr="//a[@id='o_sale_portal_paynow']" position="after">
            <t t-if="sale_order.id">
                <div class="d-flex justify-content-center">
                    <div>
                        <a
              class="btn btn-primary mb32"
              role="button"
              t-att-href="'/draft_sale_order?order_id=' + str(sale_order.id)"
            >
                            <span>Cambiar pedido</span>
                        </a>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
