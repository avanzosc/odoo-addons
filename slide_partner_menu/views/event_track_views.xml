<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_event_track_form" model="ir.ui.view">
        <field name="model">event.track</field>
        <field name="inherit_id" ref="event_slides.view_event_track_form"/>
        <field name="arch" type="xml">
            <button name="button_show_event_courses" position="after">
                <button name="button_show_slide_slide_partner"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-tasks">
                    <field name="count_statistics" string="Courses statistics" widget="statinfo"/>
                </button>
            </button>
        </field>
    </record>
</odoo>
