<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="report_evaluation_certification_printing" model="ir.ui.view">
        <field name="name">report_evaluation_certification_printing</field>
        <field name="model">slide_channel_survey.report_evaluation_certification_printing</field>
        <field name="type">qweb</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <t t-name="slide_channel_survey.report_evaluation_certification_printing">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="slide_channel_survey.report_evaluation_certification_doc"
                            t-lang="o.partner_id.lang">
                            <t t-set="show_evaluations_header" t-value="1" />
                        </t>
                    </t>
                </t>
            </t>
        </field>
    </record>
    <template id="report_survey">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="survey_pdf_report.report_evaluation_certification_printing" t-lang="o.partner_id.lang" />
            </t>
        </t>
    </template>

    <record id="action_report_survey_print" model="ir.actions.report">
        <field name="name">Imprimir encuenta</field>
        <field name="model">survey.survey</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">survey_pdf_report.report_survey</field>
        <field name="report_file">survey_pdf_report.report_survey</field>
        <field name="print_report_name">object.name</field>
        <field name="binding_model_id" ref="survey.model_survey_survey" />
        <field name="binding_type">report</field>
    </record>
</odoo>