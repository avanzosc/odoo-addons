<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="stock_config_settings_form_view" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='operations_setting_container']" position="inside">
                <div
          class="col-xs-12 col-md-6 o_setting_box"
          id="detailed_operations_visible"
        >
                    <div class="o_setting_left_pane">
                        <field name="group_detailed_operations_visible" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_detailed_operations_visible" />
                        <div class="text-muted">
                            Detailed operations always visible.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
