<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="stock_picking_form_inh_utilities" model="ir.ui.view">
          <field name="model">stock.picking</field>
          <field name="inherit_id" ref="stock.view_picking_form"/>
          <field name="arch" type="xml">
            <field name="move_lines" position="after">
                <group class="oe_subtotal_footer oe_right" colspan="2">
                    <field name="price_total" />
                </group>
            </field>
          </field>
        </record>
        <record id="view_move_picking_tree_inh_utilities" model="ir.ui.view">
          <field name="model">stock.move</field>
          <field name="inherit_id" ref="stock.view_move_picking_tree"/>
          <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="reserved"/>
                <field name="unreserved"/>
                <field name="price_unit"/>
                <field name="price_subtotal"/>
            </field>
          </field>
        </record>
        <record id="view_move_form_inh_utilities" model="ir.ui.view">
          <field name="model">stock.move</field>
          <field name="inherit_id" ref="stock.view_move_form"/>
          <field name="arch" type="xml">
            <group name="origin_grp" position="before">
                <group name="group-price" colspan="4">
                    <field name="price_unit" />
                    <field name="price_subtotal" />
                </group>
            </group>
          </field>
        </record>
        <record id="view_move_tree_inh_utilities" model="ir.ui.view">
          <field name="model">stock.move</field>
          <field name="inherit_id" ref="stock.view_move_tree"/>
          <field name="arch" type="xml">
            <field name="location_id"  position="before">
                <field name="price_unit" />
                <field name="price_subtotal" />
            </field>
          </field>
        </record>
    </data>
</openerp>
