<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="wiz_event_reg_confirm_participant_sale_order_form">
        <field name="name">wiz.event.reg.confirm.participant.sale.order.form</field>
        <field name="model">wiz.event.reg.confirm.participant.sale.order</field>
        <field name="arch" type="xml">
            <form string="Confirm course participant registration and sale order">
                <footer>
                    <button name="action_confirm_participant_sale_order" type="object"
                        string="Confirm" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_confirm_participant_sale_order_from_event_reg" model="ir.actions.act_window">
        <field name="name">Confirm course participant registration and sale order</field>
        <field name="res_model">wiz.event.reg.confirm.participant.sale.order</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="event.model_event_registration" />
    </record>
</odoo>
