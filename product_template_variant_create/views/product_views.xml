<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <field name="product_template_attribute_value_ids" position="before">
                <group>
                    <field name="product_tmpl_id" widget="many2one"/>
                </group>
            </field>
            <field name="product_template_attribute_value_ids" position="replace">
                <group>
                    <field name="product_template_attribute_value_ids" widget="many2many_tags"/>
                </group>
            </field>
        </field>
    </record>
    <record id="product_variant_action" model="ir.actions.act_window">
        <field name="name">Create Product Variants Manually</field>
        <field name="res_model">product.product</field>
        <field name="binding_model_id" ref="product.model_product_product" />
        <field name="view_mode">form</field>
        <field name="context">{'default_product_tmpl_id': active_id, 'product_tmpl_id': active_id}</field>
        <field name="target">new</field>
        <field name="view_id" ref="product.product_variant_easy_edit_view"/>
    </record>
    <record id="product_variant_wizard_action" model="ir.actions.act_window">
        <field name="name">Create Product Variants from Wizard</field>
        <field name="res_model">wiz.product.product.create</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="product_template_variant_create.product_template_wizard_view"/>
    </record>
    <record id="product_template_form" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Create Variants Manually" type="action"
                        groups="product.group_product_variant"
                        name="%(product_template_variant_create.product_variant_action)d"
                        attrs="{'invisible': ['|', ('attribute_line_ids', '&lt;=', 0), ('is_product_variant', '=', True)]}"
                />
                <button string="Create Variants Manually 2" type="action"
                        groups="product.group_product_variant"
                        name="%(product_template_variant_create.product_variant_wizard_action)d"
                        attrs="{'invisible': ['|', ('attribute_line_ids', '&lt;=', 0), ('is_product_variant', '=', True)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
