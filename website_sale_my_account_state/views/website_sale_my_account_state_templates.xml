<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
    id="website_sale_my_account_state_portal_my_quotations"
    inherit_id="sale.portal_my_quotations"
  >
          <xpath expr="//thead/tr/th[4]" position="attributes">
              <attribute name="t-if">False</attribute>
          </xpath>
          <xpath expr="//thead/tr/th[4]" position="after">
              <th class="text-end">State</th>
          </xpath>

         <xpath expr="/t/t/t[3]/t/tr/td[4]" position="attributes">
              <attribute name="t-if">False</attribute>
          </xpath>

          <xpath expr="/t/t/t[3]/t/tr/td[4]" position="after">
              <td class="text-end">
                  <t t-if="quotation.state == 'draft'">Draft</t>
                  <t t-if="quotation.state == 'sent'">Sent</t>
                  <t t-if="quotation.state == 'sale'">Sale</t>
                  <t t-if="quotation.state == 'cancel'">Cancelled</t>
              </td>
          </xpath>
    </template>

    <template
    id="website_sale_my_account_state_portal_my_orders"
    inherit_id="sale.portal_my_orders"
  >
        <xpath expr="//thead/tr/th[3]" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
        <xpath expr="//thead/tr/th[3]" position="after">
            <th class="text-end">State</th>
        </xpath>

        <xpath expr="/t/t/t[3]/t/tr/td[3]" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>

        <xpath expr="/t/t/t[3]/t/tr/td[3]" position="after">
            <td class="text-end">
                <t t-if="order.state == 'draft'">Draft</t>
                <t t-if="order.state == 'sent'">Sent</t>
                <t t-if="order.state == 'sale'">Sale</t>
                <t t-if="order.state == 'cancel'">Cancelled</t>
            </td>
        </xpath>
    </template>
</odoo>
