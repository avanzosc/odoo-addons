<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Agregar portada -->
    <template id="report_evaluation_certification_printing_cover" name="Survey: Cover Page">
        <t t-set="survey_form_readonly" t-value="true" />
        <div class="wrap">
            <div class="o_survey_print container">
                <div role="form">
