<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_application_tree" model="ir.ui.view">
        <field name="name">product.application.tree</field>
        <field name="model">product.application</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_product_application_search" model="ir.ui.view">
        <field name="name">product.application.search</field>
        <field name="model">product.application</field>
        <field name="arch" type="xml">
            <search string="Search Product Applications">
                <field name="name" string="Name"/>
                <filter string="Active Applications" name="filter_active" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="action_product_application_tree" model="ir.actions.act_window">
        <field name="name">Product Application</field>
        <field name="res_model">product.application</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_product_application_tree" />
    </record>

    <menuitem id="menu_product_application" name="Product Applications" parent="stock.menu_stock_inventory_control" action="action_product_application_tree" />

</odoo>
