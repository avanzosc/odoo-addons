<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <field name="product_tooltip" position="before">
                <field name="product_grade_id" readonly="1" />
                <field name="product_thickness_id" readonly="1" />
            </field>
        </field>
    </record>

    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="arch" type="xml">
            <field name="product_template_variant_value_ids" position="after">
                <field name="product_material_id" optional="show" />
                <field name="product_grade_id" optional="show" />
                <field name="product_thickness_id" optional="show" />
            </field>
        </field>
    </record>
</odoo>
