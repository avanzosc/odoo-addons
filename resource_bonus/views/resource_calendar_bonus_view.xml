<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="resource_calendar_bonus_view_tree" model="ir.ui.view">
        <field name="model">resource.calendar.bonus</field>
        <field name="arch" type="xml">
            <tree editable="top" decoration-muted="not bonus_percentage">
                <field name="dayofweek"/>
                <field name="bonus_percentage"/>
            </tree>
        </field>
    </record>

    <record id="resource_calendar_bonus_view_form" model="ir.ui.view">
        <field name="model">resource.calendar.bonus</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="dayofweek"/>
                    <field name="bonus_percentage"/>
                </group>
            </form>
        </field>
    </record>
    
</odoo>
