<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view" />
        <field name="arch" type="xml">
            <group name="properties" position="before">
                <group string="Last invoice Info" name="last_invoice_info"
                        attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}">
                    <field name="last_supplier_invoice_id"/>
                    <field name="last_supplier_invoice_date"/>
                    <field name="last_supplier_invoice_price"/>
                </group>
            </group>
        </field>
    </record>

    <record id="product_template_tree_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <field name="standard_price" position="after">
                <field name="last_supplier_invoice_price" />
            </field>
        </field>
    </record>
</odoo>
