<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_partner_permission_view_form" model="ir.ui.view">
        <field name="model">res.partner.permission</field>
        <field name="inherit_id" ref="contacts_school_permission.res_partner_permission_view_form"/>
        <field name="arch" type="xml">
            <field name="cannot_cancel" position="after">
                <field name="is_for_employee" />
                <field name="employee_id" invisible="True"/>
            </field>
            <field name="type_id" position="attributes">
                <attribute name="domain">
                    [('is_for_employee', '=', employee_id)]</attribute>
            </field>
            <xpath expr="//page[@name='Signatures']/group/group[2]" position="attributes">
                <attribute name="attrs">{'invisible': [('is_for_employee','=',True)]}</attribute>
            </xpath>
            <field name="sign_both" position="attributes">
                <attribute name="attrs">{'invisible': [('is_for_employee','=',True)]}</attribute>
            </field>
        </field>
    </record>
</odoo>
