<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_purchase_order_search" model="ir.ui.view">
        <field name="model">purchase.report</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_search" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="estimated_payment_date" />
            </field>
            <filter name="order_month" position="after">
                <filter string="Estimated payment date" name="estimated-payment-date" context="{'group_by': 'estimated_payment_date'}"/>
            </filter>
        </field>
    </record>
</odoo>
