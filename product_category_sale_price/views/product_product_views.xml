<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="mode">primary</field>
        <field eval="7" name="priority" />
        <field
      name="inherit_id"
      ref="product_sale_configuration.product_normal_form_view"
    />
        <field name="arch" type="xml">
            <field name="manual_pvp" position="attributes">
                <attribute
          name="attrs"
        >{'invisible': [('only_read_prices','=',True)]}</attribute>
            </field>
            <field name="base_cost" position="attributes">
                <attribute
          name="attrs"
        >{'readonly':[('cost_method','=','average')]}</attribute>
            </field>
            <field name="extra_cost" position="attributes">
                <attribute name="attrs" />
            </field>
            <field name="product_category_sale_price_id" position="attributes">
                <attribute
          name="attrs"
        >{'readonly':[('manual_pvp','=',True)]}</attribute>
            </field>
            <field name="target_cost" position="attributes">
                <attribute
          name="attrs"
        >{'readonly':[('manual_pvp','=',True)]}</attribute>
            </field>
            <field name="percentage_between_costs" position="attributes">
                <attribute name="attrs" />
            </field>
            <field name="last_price_change_date" position="attributes">
                <attribute name="attrs" />
            </field>
            <field name="new_extra_cost" position="attributes">
                <attribute name="attrs" />
            </field>
            <field name="last_change_date_new_extra_cost" position="attributes">
                <attribute name="attrs" />
            </field>
            <field name="new_target_cost" position="attributes">
                <attribute name="attrs" />
            </field>
            <field name="new_product_category_sale_price_id" position="attributes">
                <attribute name="attrs" />
            </field>
            <field name="new_sale_price" position="attributes">
                <attribute
          name="attrs"
        >{'readonly':[('manual_pvp','=',False)]}</attribute>
            </field>
            <field name="last_new_sale_price_change_date" position="attributes">
                <attribute name="attrs" />
            </field>
        </field>
     </record>
</odoo>
