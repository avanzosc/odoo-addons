<odoo>
    <data>
        <record id="wiz_change_product_category_sale_price_view_form" model="ir.ui.view">
            <field name="model">wiz.change.product.category.sale.price</field>
            <field name="arch" type="xml">
                <form string="Change product category sale price">
                    <group>
                        <field name="category_id" required="1"/>
                    </group>
                    <footer>
                        <button string="Change category" name="button_change_category"
                            type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <act_window id="action_wiz_change_product_category_sale_price"
            multi="False"
            key2="client_action_multi" name="Change product category sale price"
            res_model="wiz.change.product.category.sale.price" src_model="product.product"
            view_mode="form" target="new" view_type="form"
            groups="product_sale_configuration.allow_change_sale_price"/>
    </data>
</odoo>
