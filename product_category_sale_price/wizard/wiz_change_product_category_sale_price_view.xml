<odoo>
    <data>
        <record
      id="wiz_change_product_category_sale_price_view_form"
      model="ir.ui.view"
    >
            <field name="model">wiz.change.product.category.sale.price</field>
            <field name="arch" type="xml">
                <form string="Change product category sale price">
                    <group>
                        <field name="category_id" required="1" />
                    </group>
                    <footer>
                        <button
              string="Change category"
              name="button_change_category"
              type="object"
              default_focus="1"
              class="btn-primary"
            />
                        <button
              string="Cancel"
              class="btn-secondary"
              special="cancel"
            />
                    </footer>
                </form>
            </field>
        </record>
<record
      id="action_wiz_change_product_category_sale_price"
      model="ir.actions.act_window"
    >
    <field name="name">Change product category sale price</field>
    <field name="res_model">wiz.change.product.category.sale.price</field>
    <field name="binding_model_id" ref="model_product_product" />
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field
        name="groups_id"
        eval="[(4, ref('product_sale_configuration.allow_change_sale_price'))]"
      />
</record>    </data>
</odoo>
