<odoo>
    <data>
        <record id="wiz_recalculate_product_sale_price_view_form" model="ir.ui.view">
            <field name="model">wiz.recalculate.product.sale.price</field>
            <field name="arch" type="xml">
                <form string="Recalculate sale price">
                    <group colspan="4">
                        <string
            >You are going to recalculate sale price in selected products. Are you sure? </string>
                    </group>
                    <footer>
                        <button
              string="Recalculate sale price"
              name="button_recalculate_product_sale_price"
              type="object"
              default_focus="1"
              class="btn-primary"
            />
                        <button
              string="Cancel"
              class="btn-secondary"
              special="cancel"
            />
                    </footer>
                </form>
            </field>
        </record>
        <record
      id="action_wiz_recalculate_product_sale_price"
      model="ir.actions.act_window"
    >
            <field name="name">Recalculate sale price</field>
            <field name="res_model">wiz.recalculate.product.sale.price</field>
            <field name="binding_model_id" ref="model_product_product" />
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field
        name="groups_id"
        eval="[(4, ref('product_sale_configuration.allow_change_sale_price'))]"
      />
        </record>
    </data>
</odoo>
