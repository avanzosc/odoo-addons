<odoo>
    <data>
        <!-- Updated view definition -->
        <record id="wiz_change_product_pvp_manual_view_form" model="ir.ui.view">
            <field name="name">wiz.change.product.pvp.manual.form</field>
            <field name="model">wiz.change.product.pvp.manual</field>
            <field name="arch" type="xml">
                <form string="Change PsP manual in products">
                    <header>
                        <!-- Group is replaced with div in Odoo 15 -->
                        <div>
                            <field name="manual_pvp"/>
                        </div>
                    </header>
                    <footer>
                        <!-- Button definition -->
                        <button
                            string="Change manual PsP"
                            name="button_change_manual_pvp"
                            type="object"
                            default_focus="1"
                            class="btn-primary"/>
                        <button
                            string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Updated action definition -->
        <record id="action_wiz_change_product_pvp_manual_sale_price" model="ir.actions.act_window">
            <field name="name">Change PsP manual in products</field>
            <field name="res_model">wiz.change.product.pvp.manual</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_product_product"/> <!-- Use binding_model_id -->
            <field name="groups_id" eval="[(4, ref('product_sale_configuration.allow_change_sale_price'))]"/> <!-- Use groups_id -->
        </record>
    </data>
</odoo>
