<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="contract_line_form_view_inherit" model="ir.ui.view">
        <field name="name">contract.line.form.view.inherit</field>
        <field name="model">contract.line</field>
        <field name="inherit_id" ref="contract.contract_line_form_view" />
        <field name="arch" type="xml">
            <group name="recurrence_info" position="inside">
                <field name="error_occurred" />
            </group>
        </field>
    </record>

    <record id="contract_line_tree_view_inherit" model="ir.ui.view">
        <field name="name">contract.line.tree.view.inherit</field>
        <field name="model">contract.line</field>
        <field name="inherit_id" ref="contract.contract_line_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="error_occurred" />
            </xpath>
        </field>
    </record>

</odoo>
