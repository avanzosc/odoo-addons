<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_form_view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div>
                    <field name="is_fsc_certificate"/>
                    <label for="is_fsc_certificate"/>
                    <button name="fsc_update_orders" type="object" string="Update Sale Orders"/>
                </div>
            </div>
        </field>
    </record>
    <record model="ir.ui.view" id="view_order_form">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                 <field name="is_fsc_certificate"/>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="sale_order_view_search_inherit_quotation">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation" />
        <field name="arch" type="xml">
            <filter name="filter_order_date" position="after">
                <separator/>
                <filter name="is_fsc_certificate" string="FSC certificated" domain="[('is_fsc_certificate','=', True)]"/>
            </filter>
        </field>
    </record>
    <record model="ir.ui.view" id="invoice_form">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form" />
        <field name="arch" type="xml">
            <field name="cash_rounding_id" position="after">
                 <field name="is_fsc_certificate"/>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="view_account_invoice_filter">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <filter name="activities_upcoming_all" position="after">
                <separator/>
                <filter name="is_fsc_certificate" string="FSC certificated" domain="[('is_fsc_certificate','=', True)]"/>
            </filter>
        </field>
    </record>
    <record model="ir.ui.view" id="view_picking_form">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="backorder_id" position="after">
                 <field name="is_fsc_certificate"/>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="view_picking_internal_search">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search" />
        <field name="arch" type="xml">
            <filter name="activities_upcoming_all" position="after">
                <separator/>
                <filter name="is_fsc_certificate" string="FSC certificated" domain="[('is_fsc_certificate','=', True)]"/>
            </filter>
        </field>
    </record>
</odoo>
