<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_sale_payment_mode" inherit_id="sale.report_saleorder_document">
        <xpath expr="//td[@name='td_name']" position="inside">
            <span class="ml-2" t-if="line.is_fsc_certificate"> *</span>
        </xpath>
        <xpath expr="//div[@t-if='doc.signature']" position="after">
            <div t-if="doc.is_fsc_certificate">
                [*] Only the products that are identified as such in this document are FSC ® MIX Certified. FSC certificate number: BMC-COC-010044
            </div>
        </xpath>
    </template>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//td[@name='account_invoice_line_name']" position="inside">
            <span class="ml-2" t-if="line.product_id.is_fsc_certificate"> *</span>
        </xpath>
        <xpath expr="//div[@id='qrcode']" position="before">
            <div t-if="o.is_fsc_certificate">
                [*] Only the products that are identified as such in this document are FSC ® MIX Certified. FSC certificate number: BMC-COC-010044
            </div>
        </xpath>
    </template>
    <template id="external_layout_background" inherit_id="web.external_layout_background">
        <div t-field="company.report_footer" position="replace">
            <div t-if="o and o._name in ['account.invoice','sale.order','stock.picking']" class="list-inline-item row">
                <div class="col-11">
                    <div t-field="company.report_footer"/>
                </div>
                <div class="col-1">
                    <img style="max-width: 69px;" src="/product_fsc_certificate/static/src/img/fsc_certificate.jpeg" alt="FSC cetrificate"/>
                </div>
            </div>
            <t t-else="">
                <div t-field="company.report_footer"/>
            </t>
        </div>
    </template>
</odoo>
