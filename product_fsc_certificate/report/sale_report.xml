<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_sale_payment_mode" inherit_id="sale.report_saleorder_document">
        <xpath expr="//td[@name='td_name']" position="inside">
            <span class="ml-2" t-if="line.fsc_certificate">
                <img style="max-width: 30px;" src="/product_fsc_certificate/static/src/img/fsc_certificate.jpeg" alt="FSC cetrificate"/>
            </span>
        </xpath>
    </template>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//td[@name='account_invoice_line_name']" position="inside">
            <span class="ml-2" t-if="line.product_id.fsc_certificate">
                <img style="max-width: 30px;" src="/product_fsc_certificate/static/src/img/fsc_certificate.jpeg" alt="FSC cetrificate"/>
            </span>
        </xpath>
    </template>
</odoo>
