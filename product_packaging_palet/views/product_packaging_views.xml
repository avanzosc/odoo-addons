<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_packaging_tree_view" model="ir.ui.view">
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_tree_view" />
        <field name="arch" type="xml">
            <field name="qty" position="after">
                <field
          name="palet_id"
          context="{'form_view_ref': 'product.product_packaging_form_view'}"
        />
                <field name="palet_qty" />
            </field>
        </field>
    </record>

    <record id="product_packaging_form_view" model="ir.ui.view">
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_form_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="attributes">
                <attribute name="required">0</attribute>
                <attribute
          name="attrs"
        >{'required': [('is_generic', '=', False)]}</attribute>
            </field>
            <field name="product_id" position="after">
                <field name="is_generic" />
            </field>
            <field name="barcode" position="before">
                <field
          name="palet_id"
          context="{'default_is_generic': True,'form_view_ref': 'product.product_packaging_form_view'}"
        />
                <field name="palet_qty" />
            </field>
        </field>
    </record>

    <record id="product_packaging_delivery_form" model="ir.ui.view">
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="delivery.product_packaging_delivery_form" />
        <field name="arch" type="xml">
            <div name="packaging_length" position="after">
                <field name="is_generic" />
            </div>
        </field>
    </record>
</odoo>
