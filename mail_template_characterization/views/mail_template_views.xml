<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="email_template_form">
        <field name="name">email.template.form</field>
        <field name="model">mail.template</field>
        <field name="inherit_id" ref="mail.email_template_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Other Information">
                    <group>
                        <field name="main_contact"/>
                        <field name="joint"/>
                        <field name="assembly"/>
                        <field name="bidding"/>
                    </group>
                    <group>
                        <separator string="Areas" colspan="4"/>
                        <field name="area_ids" nolabel="1" colspan="4"/>
                        <separator string="Committees" colspan="4"/>
                        <field name="committee_ids" nolabel="1" colspan="4"/>
                        <separator string="Teams" colspan="4"/>
                        <field name="team_ids" nolabel="1" colspan="4"/>
                        <separator string="Structures" colspan="4"/>
                        <field name="structure_ids" nolabel="1" colspan="4"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
