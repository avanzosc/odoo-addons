<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_crossovered_budget_line_tree" model="ir.ui.view">
        <field name="model">crossovered.budget.lines</field>
        <field
      name="inherit_id"
      ref="account_budget_oca.view_crossovered_budget_line_tree"
    />
        <field name="arch" type="xml">
            <field name="theoretical_amount" position="after">
                <field name="result_amount" optional="show" />
            </field>
        </field>
    </record>

    <record id="action_recalculate_result_amount" model="ir.actions.server">
        <field name="name">Recalculate Result Amount</field>
        <field
      name="model_id"
      ref="account_budget_oca.model_crossovered_budget_lines"
    />
        <field
      name="binding_model_id"
      ref="account_budget_oca.model_crossovered_budget_lines"
    />
        <field name="state">code</field>
        <field name="code">
            for record in records:
                record.action_recalculate_result_amount()
        </field>
    </record>
</odoo>
