<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_line_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree" />
        <field name="arch" type="xml">
            <field name="qty_done" position="after">
                <field name="weight" readonly="1" optional="show" sum="Total Weight" />
            </field>
        </field>
    </record>

    <record id="view_move_line_tree_detailed" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree_detailed" />
        <field name="arch" type="xml">
            <field name="qty_done" position="after">
                <field name="weight" readonly="1" optional="show" sum="Total Weight" />
            </field>
        </field>
    </record>

    <record id="view_stock_move_line_operation_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
        <field name="arch" type="xml">
            <field name="qty_done" position="after">
                <field name="weight" readonly="1" optional="show" sum="Total Weight" />
            </field>
        </field>
    </record>

    <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field
      name="inherit_id"
      ref="stock.view_stock_move_line_detailed_operation_tree"
    />
        <field name="arch" type="xml">
            <field name="qty_done" position="after">
                <field name="weight" readonly="1" optional="show" sum="Total Weight" />
            </field>
        </field>
    </record>
</odoo>
