<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_partner_permission_type_view_form" model="ir.ui.view">
        <field name="model">res.partner.permission.type</field>
        <field name="inherit_id" ref="contacts_school_permission.res_partner_permission_type_view_form"/>
        <field name="arch" type="xml">
            <field name="admission_default" position="after">
                <group>
                    <field name="min_age" />
                </group>
            </field>
        </field>
    </record>
    <record id="action_update_allowed_signers" model="ir.actions.server">
        <field name="name">Update allowed signers</field>
        <field name="model_id" ref="contacts_school_permission.model_res_partner_permission_type"/>
        <field name="binding_model_id" ref="contacts_school_permission.model_res_partner_permission_type" />
        <field name="state">code</field>
        <field name="code">
            for record in records:
                record._compute_allowed_signer_ids()
        </field>
    </record>
</odoo>
