<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <record model="ir.ui.view" id="view_move_form">
         <field name="model">account.move</field>
         <field name="inherit_id" ref="account.view_move_form" />
         <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
          name="action_view_analytics"
          class="oe_stat_button"
          icon="fa-bars"
          type="object"
          attrs="{'invisible': [('state', '!=', 'posted')]}"
          string="Analytic Lines"
        />
            </div>
            <xpath
        expr="//field[@name='invoice_line_ids']/tree/field[@name='account_internal_group']"
        position="after"
      >
                <field name="distribution_done" invisible="1" />
                <button
          name="action_show_distribution"
          type="object"
          icon="fa-list"
          attrs="{'column_invisible': [('parent.state', '!=', 'posted')]}"
        />
            </xpath>
            <xpath
        expr="//field[@name='line_ids']/tree/field[@name='account_internal_group']"
        position="after"
      >
                <field name="distribution_done" invisible="1" />
                <button
          name="action_show_distribution"
          type="object"
          icon="fa-list"
          attrs="{'column_invisible': [('parent.state', '!=', 'posted')]}"
        />
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                <attribute
          name="decoration-danger"
        >distribution_done == False</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes">
                <attribute
          name="decoration-danger"
        >distribution_done == False</attribute>
            </xpath>
         </field>
     </record>
</odoo>
