<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="main_parent_id"/>
                <field name="main_state_id"/>
            </field>
            <filter name="group_country" position="after">
                <filter name="group_main_parent" string="Main Partner"
                    context="{'group_by': 'main_parent_id'}"/>
                <filter name="group_main_state" string="Main Province"
                    context="{'group_by': 'main_state_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
