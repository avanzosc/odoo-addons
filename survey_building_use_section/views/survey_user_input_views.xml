<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="survey_user_input_view_form" model="ir.ui.view">
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_form" />
        <field name="arch" type="xml">
            <field name="user_input_line_ids" position="attributes">
                <attribute name="attrs">{}</attribute>
            </field>
            <notebook position="before">
                <group>
                    <group string="Building">
                        <field name="inspected_building_id"/>
                        <field name="building_use_id" readonly="1" attrs="{'invisible':[('inspected_building_id', '=', False)]}"/>
                        <field name="section_ids" invisible="1"/>
                    </group>
                    <group string="Section">
                        <field name="building_section_id" attrs="{'invisible':[('inspected_building_id', '=', False)]}" domain="[('id', 'in', section_ids)]"/>
                        <field name="risk" readonly="1" attrs="{'invisible':[('building_section_id', '=', False)]}"/>
                        <field name="superficie" readonly="1" attrs="{'invisible':[('building_section_id', '=', False)]}"/>
                    </group>
                </group>
                <group>
                    <group string="Maintainer">
                        <field name="maintainer_id" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                        <field name="maintainer_emi" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                    </group>
                    <group string="Installer">
                        <field name="installer_id" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                        <field name="installer_epi" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                    </group>
                    <group string="Inspection">
                        <field name="inspection_start_date" />
                        <field name="inspection_end_date" />
                        <field name="inspection_type" />
                        <field name="inspector_id" />
                        <field name="administrator_id" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                    </group>
                    <group string="Other">
                        <field name="file_number" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                        <field name="act_number" />
                        <field name="certification_date" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                    </group>
                </group>
                <group>
                    <group string="Project">
                        <field name="project_title" attrs="{'invisible':[('inspected_building_id', '=', False)]}"/>
                        <field name="project_author_id" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                        <field name="project_author_degree" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                        <field name="project_author_license" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                        <field name="project_approved_date" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                    </group>
                    <group string="Certificate of Final Work Direction">
                        <field name="dof_author_id" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                        <field name="dof_author_degree" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                        <field name="dof_author_license" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                        <field name="dof_approved_date" attrs="{'invisible':[('inspected_building_id', '=', False)]}" />
                    </group>
                </group>
            </notebook>
            <xpath expr="//field[@name='user_input_line_ids']/tree/field[@name='question_id']" position="after">
                <field name="question_normative_id" optinal="show" />
                <field name="notes" optinal="show" />
            </xpath>
            <xpath expr="//button[@name='action_resend']" position="after">
                <button name="action_start_survey" string="Start Survey" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('state', '=', 'done'), ('partner_id', '=', False)]}" />
            </xpath>
        </field>
    </record>

    <record id="survey_user_input_view_tree" model="ir.ui.view">
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_tree"/>
        <field name="arch" type="xml">
            <field name="survey_id" position="after">
                <field name="inspected_building_id" optional="show"/>
                <field name="building_use_id" optional="show"/>
                <field name="building_section_id" optional="show"/>
                <field name="risk" optional="show"/>
                <field name="superficie" optional="show"/>
                <field name="file_number" optional="hide"/>
                <field name="act_number" optional="hide"/>
                <field name="inspection_start_date" optional="show"/>
                <field name="inspection_end_date" optional="show"/>
                <field name="inspector_id" optional="show"/>
                <field name="inspection_type" optional="show"/>
            </field>
        </field>
    </record>

    <record id="survey_user_input_view_search" model="ir.ui.view">
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_search"/>
        <field name="arch" type="xml">
            <filter name="completed" position="after">
                <field name="inspected_building_id"/>
                <field name="building_use_id"/>
                <field name="building_section_id" />
                <field name="risk"/>
                <field name="file_number"/>
                <field name="act_number"/>
                <field name="inspection_start_date"/>
                <field name="inspection_end_date"/>
                <field name="inspector_id"/>
                <field name="inspection_type"/>
            </filter>
            <filter name="group_by_partner" position="after">
                <filter string="Inspected Building" name="group_by_inspected_building" domain="[]" context="{'group_by': 'inspected_building_id'}"/>
                <filter string="Building type" name="group_by_building_type" domain="[]" context="{'group_by': 'building_use_id'}"/>
                <filter string="Building Section/Area" name="group_by_building_section" domain="[]" context="{'group_by': 'building_section_id'}"/>
                <filter string="Risk" name="group_by_risk" domain="[]" context="{'group_by': 'risk'}"/>
                <filter string="Inspection Start Date" name="group_by_insp_start_date" domain="[]" context="{'group_by': 'inspection_start_date'}"/>
                <filter string="Inspection End Date" name="group_by_insp_end_date" domain="[]" context="{'group_by': 'inspection_end_date'}"/>
                <filter string="Inspector" name="group_by_inspector" domain="[]" context="{'group_by': 'inspector_id'}"/>
                <filter string="Inspection Type" name="group_by_insp_type" domain="[]" context="{'group_by': 'inspection_type'}"/>
            </filter>
        </field>
    </record>
</odoo>
