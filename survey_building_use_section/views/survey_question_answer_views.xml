<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="survey_question_answer_view_form" model="ir.ui.view">
        <field name="model">survey.question.answer</field>
        <field name="inherit_id" ref="survey.survey_question_answer_view_form" />
        <field name="arch" type="xml">
            <sheet position="inside">
                <group colspan="2">
                    <field name="question_article_ids" widget="many2many_tags" colspan="2"/>
                </group>
            </sheet>
        </field>
    </record>

    <record id="survey_question_answer_view_tree" model="ir.ui.view">
        <field name="model">survey.question.answer</field>
        <field name="inherit_id" ref="survey.survey_question_answer_view_tree" />
        <field name="arch" type="xml">
            <field name="question_id" position="after">
                <field name="question_article_ids" widget="many2many_tags" optional="show"/>
            </field>
        </field>
    </record>

    <record id="survey_question_answer_view_search" model="ir.ui.view">
        <field name="model">survey.question.answer</field>
        <field name="inherit_id" ref="survey.survey_question_answer_view_search" />
        <field name="arch" type="xml">
            <field name="question_id" position="after">
                <field name="survey_id"/>
                <field name="matrix_survey_id"/>
            </field>
            <filter name="group_by_question" position="after">
                <filter name="group_by_survey" string="Survey"
                    domain="[]" context="{'group_by':'survey_id'}"/>
                <filter name="group_by_matrix_survey" string="Matrix Survey"
                    domain="[]" context="{'group_by':'matrix_survey_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
