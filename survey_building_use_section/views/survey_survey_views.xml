<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="survey_survey_view_form" model="ir.ui.view">
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_survey_view_form" />
        <field name="arch" type="xml">
            <button name="action_send_survey" position="attributes">
                <attribute name="string">Create Survey to Building</attribute>
            </button>
            <button name="action_send_survey" position="after">
                <button name="add_normative_filter" string="Add Normative Filter" type="object" class="oe_highlight" attrs="{'invisible': [('user_id', '=', False)]}" />
            </button>

            <!-- <xpath expr="//field[@name='question_and_page_ids']//field[@name='title']">
                <field name="question_normative_ids" widget="many2many_tags" optional="show"/>
            </xpath> -->
        </field>
    </record>
</odoo>
