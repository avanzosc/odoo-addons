<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="survey_question_form" model="ir.ui.view">
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_form" />
        <field name="arch" type="xml">
            <notebook position="before">
                <group colspan="2">
                    <field name="question_normative_ids" widget="many2many_tags" colspan="2"/>
                    <field name="questions_to_filter" widget="many2many_tags" colspan="2"/>
                </group>
            </notebook>
            <xpath expr="//field[@name='suggested_answer_ids']/tree/field[@name='value_image']" position="after">
                <field name="notes" />
            </xpath>
            <xpath expr="//field[@name='matrix_row_ids']/tree/field[@name='value']" position="after">
                <field name="related_article_filter_ids" widget="many2many_tags" invisible="1" />
                <field name="question_article_ids" widget="many2many_tags" domain="[('id', 'in', related_article_filter_ids)]" />
                <field name="notes" />
            </xpath>
        </field>
    </record>

    <record id="survey_question_tree" model="ir.ui.view">
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_tree" />
        <field name="arch" type="xml">
            <field name="survey_id" position="after">
                <field name="question_normative_ids" widget="many2many_tags" optional="show"/>
                <field name="questions_to_filter" widget="many2many_tags" optional="show"/>
            </field>
        </field>
    </record>

    <record id="survey_question_search" model="ir.ui.view">
        <field name="model">survey.question</field>
        <field name="inherit_id" ref="survey.survey_question_search" />
        <field name="arch" type="xml">
            <field name="survey_id" position="after">
                <field name="question_normative_ids"/>
                <field name="questions_to_filter"/>
            </field>
            <filter name="group_by_survey" position="after">
                <filter name="group_question_rormative" string="Question Normatives" domain="[]" context="{'group_by':'question_normative_ids'}"/>
                <filter name="group_questions_to_filter" string="Questions to Filter" domain="[]" context="{'group_by':'questions_to_filter'}"/>
            </filter>
        </field>
    </record>
</odoo>
