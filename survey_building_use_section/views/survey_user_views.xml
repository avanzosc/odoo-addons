<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="survey_user_input_view_form_inherit" model="ir.ui.view">
        <field name="name">survey.user_input.view.form.inherit</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_resend']" position="after">
                <button name="start_survey" string="Start Survey" type="object" class="oe_link" icon="fa-external-link"
                    attrs="{'invisible': [('state', '=', 'done')]}">
                    <a t-attf-href="/survey/start/{{ record.access_token }}">Start Survey</a>
                </button>
            </xpath>
        </field>
    </record>
</odoo>