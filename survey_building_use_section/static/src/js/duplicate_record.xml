<?xml version="1.0" encoding="utf-8" ?>
<templates xml:space="preserve">
    <t t-name="survey_building_use_section.ArticleList" owl="1">
        <div class="todo-list-container" style="height: 100%; overflow: auto;">
            <div class="row mx-2 mt-3">
                <div class="col-lg-6">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search here..." t-ref="search-input" t-on-keyup="searchArticles"/>
                        <button class="btn btn-outline-primary" t-on-click="searchArticles">Search</button>
                    </div>
                </div>
            </div>

            <div class="row m-2">
                <div class="col">
                    <table class="table table-striped table-hover border">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Error</th>
                                <th scope="col">Description</th>
                                <th scope="col">Normative</th>
                                <th scope="col">Botones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="state.articleList" t-as="article" t-key="article.id">
                                <td>
                                    <span t-esc="article.id"/>
                                </td>
                                <td>
                                    <span t-esc="article.name" contenteditable="true" t-on-blur="(e) => this.editArticle(article,e,'name')"/>
                                </td>
                                <td>
                                    <span t-esc="article.error_text" contenteditable="true" t-on-blur="(e) => this.editArticle(article,e,'error_text')"/>
                                </td>
                                <td>
                                    <span t-esc="article.description" contenteditable="true" t-on-blur="(e) => this.editArticle(article,e,'description')"/>
                                </td>
                                <td>
                                    <div style="display: flex; ">
                                        <div style="width: 200px;">
                                            <span t-esc="article.question_normative_id"/>
                                        </div>
                                        <label t-att-for="'integerInput_' + article.id">ID:</label>
                                        <input style="width: 20%; margin-left: 5px;" type="number" t-model="article.question_normative_id" t-on-blur="(e) => this.editArticle(article,e,'question_normative_id')" t-att-id="'integerInput_' + article.id"/>
                                    </div>
                                </td>
                                <td>
                                    <button class="btn btn-primary" t-on-click="() => this.duplicateArticle(article)">Duplicate</button>
                                    <button class="btn btn-danger ms-2" t-on-click="() => this.deleteArticle(article)">Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>
</templates>
