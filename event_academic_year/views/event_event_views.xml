<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_event_form" model="ir.ui.view">
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="academic_year_id" />
            </field>
        </field>
    </record>
    <record id="view_event_tree" model="ir.ui.view">
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_tree"/>
        <field name="arch" type="xml">
            <field name="date_begin" position="before">
                <field name="academic_year_id" optional="show" />
            </field>
        </field>
    </record>
    <record id="view_event_search" model="ir.ui.view">
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_search"/>
        <field name="arch" type="xml">
            <field name="stage_id" position="after">
                <field name="academic_year_id" />
            </field>
            <filter name="date_begin" position="before">
                <filter string="Academic year" name="academic-year" context="{'group_by': 'academic_year_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
