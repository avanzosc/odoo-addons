<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Prohibited Categories">
                    <group>
                        <field name="prohibited_category_ids" widget="many2many_tags" />
                        <field
              name="related_prohibited_category_ids"
              widget="many2many_tags"
              readonly="1"
            />
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <record id="view_partner_tree_inherit_prohibited" model="ir.ui.view">
        <field name="name">res.partner.tree.inherit.prohibited</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
            <tree position="inside">
                <field
          name="prohibited_category_ids"
          optional="show"
          widget="many2many_tags"
        />
                <field
          name="related_prohibited_category_ids"
          optional="show"
          widget="many2many_tags"
        />
            </tree>
        </field>
    </record>
</odoo>
