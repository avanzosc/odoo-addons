                                            <input id="cuadrado" type="checkbox"/>
                                            <t t-esc="grouped_item.name"/>
                                        </td>
                                    </t>
                                </tr>
                                <t t-set="grouped_items" t-value="[]"/>
                            </t>
                        </t>
                    </t>
                </table>
