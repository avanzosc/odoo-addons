                <table class="reglamento w-100">
                    <t t-set="counter" t-value="0"/>
                    <t t-set="grouped_items" t-value="[]"/>

                    <t t-set="all_normatives" t-value="env['survey.question.normative'].search([])"/>

                    <!-- Filtrar las normativas basadas en el año de inicio y fin -->
                    <t t-set="current_question_print_normatives" t-value="all_normatives.filtered(lambda norm:                          norm.start_year &lt;= o.inspected_building_id.service_start_date.year and                         norm.end_year &gt;= o.inspected_building_id.service_start_date.year                     )"/>
