                        <t t-set="filtered_normatives" t-value="all_normatives.filtered(lambda norm: not isinstance(norm.start_date, bool) and not isinstance(norm.end_date, bool) and norm.start_date &lt;= license_application_date and norm.end_date &gt;= license_application_date)"/>
