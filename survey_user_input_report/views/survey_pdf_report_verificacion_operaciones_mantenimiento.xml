<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Agregar portada -->
    <template
        id="report_evaluation_certification_printing_report_survey_pdf_verificacion_operaciones_mantenimiento_cover"
        name="Survey: Cover Page"
    >

        <t
            t-set="left_table_top"
            t-value="[
        {'label': 'Partner:', 'value': o.partner_id.name},
        {'label': 'Building:', 'value': o.inspected_building_id.name},
        {'label': 'Building Type:', 'value': o.building_type_id.name},
        {'label': 'Building Section:', 'value': o.building_section_id.name},
        ]" />

        <t
            t-set="left_table_bottom"
            t-value="[
        {'label': 'Survey Title:', 'value': o.survey_id.title},
        {'label': 'Survey Expediente:', 'value': o.file_number},
        {'label': 'Survey Acta:', 'value': o.act_number},
        {'label': 'Survey Inspector:', 'value': o.inspector_id.name},
        {'label': 'Inspection Start Date:', 'value': o.inspection_start_date},
        {'label': 'Inspection End Date:', 'value': o.inspection_end_date},
        {'label': 'Inspection Type:', 'value': o.inspection_type},
        {'label': 'Scoring Success:', 'value': o.scoring_success},
        {'label': 'Score:', 'value': o.scoring_percentage},
        {'label': 'Partner:', 'value': o.partner_id.name},
        {'label': 'Email:', 'value': o.email},
        {'label': 'Building:', 'value': o.inspected_building_id.name},
        {'label': 'Building Type:', 'value': o.building_type_id.name},
        {'label': 'Building Section:', 'value': o.building_section_id.name},
        {'label': 'Risk Use:', 'value': o.risk_use},
        {'label': 'Area:', 'value': o.superficie},
        {'label': 'Create Date:', 'value': o.create_date},
        ]" />

        <t
            t-set="right_table"
            t-value="[
        {'label': 'Survey Expediente:', 'value': o.file_number},
        {'label': 'Survey Acta:', 'value': o.act_number},
        {'label': 'Inspection Start Date:', 'value': o.inspection_start_date},
        {'label': 'Inspection End Date:', 'value': o.inspection_end_date},
        {'label': 'Create Date:', 'value': o.create_date},
        ]" />

   
        <t t-set="survey_form_readonly" t-value="true" />
        <!-- Contenedor principal -->
        <div
            class="contenedor contenedor_4">

            <div>
                <table
                    class="table table-borderless o_survey_question_matrix text-white text-center">
                    <t t-foreach="left_table_top" t-as="info">
                        <t t-if="info['value']">
                            <tr class="bg-white text-white">
                                <td
                                    class="o_survey_matrix_btn text-dark position-relative">
                                    <t t-if="info.get('label')">
                                        <label>
                                            <t t-esc="info['label']" />
                                        </label>
                                    </t>
                                    <span>
                                        <t t-esc="info['value']" />
                                    </span>
                                </td>
                            </tr>
                        </t>
                    </t>

                    <!-- From one td to to tds -->

                    <t t-set="display_counter" t-value="0" />
                    <t t-set="total_counter" t-value="0" />
                    <t t-set="pair_infos" t-value="[]" />
                    <t t-foreach="left_table_bottom" t-as="info">
                        <t t-set="total_counter" t-value="total_counter+1" />
                        <t t-if="info['value']">
                            <t t-set="display_counter" t-value="display_counter+1" />
                            <t t-set="pair_infos" t-value="pair_infos + [info]" />
                            <t
                                t-if="display_counter % 2 == 0 or total_counter == len(left_table_bottom)">
                                <tr class="bg-white text-white">
                                    <t t-foreach="pair_infos" t-as="pair_info">
                                        <td
                                            class="o_survey_matrix_btn text-dark position-relative">
                                            <t t-if="pair_info.get('label')">
                                                <label>
                                                    <t t-esc="pair_info['label']" />
                                                </label>
                                            </t>
                                            <span>
                                                <t t-esc="pair_info['value']" />
                                            </span>
                                        </td>
                                    </t>
                                </tr>
                                <t t-set="pair_infos" t-value="[]" />
                            </t>
                        </t>
                    </t>
                </table>
            </div>

            <div id="table_derecha" style="margin-left: 50px;">
                <!-- Table  -->
                <table
                    class="table table-borderless o_survey_question_matrix text-white text-center">
                    <t t-foreach="right_table" t-as="info">
                        <t t-if="info['value']">
                            <tr class="bg-white text-white">
                                <td
                                    class="o_survey_matrix_btn text-dark position-relative">
                                    <t t-if="info.get('label')">
                                        <label>
                                            <t t-esc="info['label']" />
                                        </label>
                                    </t>
                                    <span>
                                        <t t-esc="info['value']" />
                                    </span>
                                </td>
                            </tr>
                        </t>
                    </t>
                </table>
            </div>
        </div>
        <img
        src="/survey_user_input_report/static/src/img/Informe_de_inspecci贸n_establecimientos_no_industriales.png"
        alt="Informe_de_inspecci贸n_establecimientos_no_industriales" id="img_pasiva" />

    </template>


    <template
        id="report_evaluation_certification_printing_report_survey_pdf_verificacion_operaciones_mantenimiento"
        name="Survey: print page"
    >
        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id" />
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()" />
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company" />
            </t>
        </t>
        <t t-call="web.external_layout_striped">
            <link href="/survey_user_input_report/static/src/css/survey_user_input_report.css"
                rel="stylesheet" />
            <page>
                <t t-if="o.survey_id.title">
                    <div
                        style="text-align: center; padding: .6rem; margin: 0; padding: 0;"
                    >
                        <h1
                            t-field="o.survey_id.title"
                            style="font-size: 1.5rem; font-weight: bold; margin-bottom: .75rem;"
                        />
                    </div>
                </t>
                <t t-if="o.survey_id.description">
                    <div
                        t-field="o.survey_id.description"
                        style="margin-bottom: 1.5rem;"
                    />
                </t>
                <t t-if="review" t-call="o.survey_id.survey_button_retake" />
                <t t-set="survey_form_readonly" t-value="true" />
                <div class="wrap">
                    <div class="o_survey_print container">
                        <div role="form">
                            <fieldset disabled="disabled">
                                <t
                                    t-call="survey_user_input_report.report_evaluation_certification_printing_report_survey_pdf_verificacion_operaciones_mantenimiento_cover"
                                    t-lang="o.partner_id.lang"
                                />
                                <t
                                    t-call="survey_user_input_report.template_survey_answers_template" />

                            </fieldset>
                        </div>
                    </div>
                </div>
            </page>
        </t>
    </template>


    <template id="report_survey_pdf_verificacion_operaciones_mantenimiento">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t
                    t-call="survey_user_input_report.report_evaluation_certification_printing_report_survey_pdf_verificacion_operaciones_mantenimiento"
                    t-lang="o.partner_id.lang"
                />
            </t>
        </t>
    </template>

    <record
        id="action_report_survey_print_verificacion_operaciones_mantenimiento"
        model="ir.actions.report"
    >
        <field name="name">Verificaci贸n Operaciones Mantenimiento</field>
        <field name="model">survey.user_input</field>
        <field name="report_type">qweb-pdf</field>
        <field
            name="report_name"
        >survey_user_input_report.report_survey_pdf_verificacion_operaciones_mantenimiento</field>
        <field
            name="report_file"
        >survey_user_input_report.report_survey_pdf_verificacion_operaciones_mantenimiento</field>
        <field
            name="print_report_name"
        >'Printed Survey Verificaci贸n Operaciones Mantenimiento'</field>
        <field name="binding_model_id" ref="survey.model_survey_user_input" />
        <field name="binding_type">report</field>
    </record>
</odoo>