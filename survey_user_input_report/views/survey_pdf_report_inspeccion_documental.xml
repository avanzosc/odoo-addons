        <t
            t-set="survey_info"
            t-value="[
                {'label': 'Survey Expediente:', 'value': o.file_number},
                {'label': 'Survey Acta:', 'value': o.act_number},
                {'label': 'Inspection Start Date:', 'value': o.inspection_start_date},
                {'label': 'Inspection End Date:', 'value': o.inspection_end_date},
                {'label': 'Survey Inspector:', 'value': o.inspector_id.name},
                {'label': 'Inspection Type:', 'value': o.inspection_type},
                {'label': 'Partner:', 'value': o.partner_id.name},
                ]" />

        <t
            t-set="survey_info2"
            t-value="[
                    {'label': 'Building:', 'value': o.inspected_building_id.name},
                    {'label': 'NIF:', 'value': o.inspected_building_id.vat},
                    {'label': 'Phone:', 'value': o.inspected_building_id.phone},

                    {'label': 'Site:', 'value': o.inspected_building_id.street},
                    {'label': 'Population:', 'value': o.inspected_building_id.city},
                    {'label': 'Zip:', 'value': o.inspected_building_id.zip},

                    {'label': 'Inspector:', 'value': o.inspector_id.name},
                    {'label': 'Inspector NIF:', 'value': o.inspector_id.vat},
                    {'label': 'Inspector Phone:', 'value': o.inspector_id.phone},

                    {'label': 'Maintainer:', 'value': o.inspector_id.name},
                    {'label': 'Maintainer NIF:', 'value': o.inspector_id.vat},
                    {'label': 'Maintainer Phone:', 'value': o.inspector_id.phone},
]" />

        <!-- Contenedor principal -->
        <div class="contenedor contenedor_1">
            <!-- Contenedor izquierdo -->
            <div>
                <p>De acuerdo con el Reglamento de instalaciones de protección contraincendios, las
                    comprobaciones y controles se realizan en base al cumplimiento de las
                    disposiciones: </p>
                <table class="reglamento">
                    <t t-set="counter" t-value="0" />
                    <t t-set="grouped_items" t-value="[]" />
                    <t
                        t-foreach="['R.D. 2267/2004', 'R.D. 513/2017', 'R.D. 1942/1993', 'CTE:DB-SI', 'NBE-CPI-96']"
                        t-as="item">
                        <t t-set="counter" t-value="counter+1" />
                        <t t-set="grouped_items" t-value="grouped_items + [item]" />
                        <t
                            t-if="counter % 2 == 0 or counter == len(['R.D. 2267/2004', 'R.D. 513/2017', 'R.D. 1942/1993', 'CTE:DB-SI', 'NBE-CPI-96'])">
                            <tr>
                                <t t-foreach="grouped_items" t-as="grouped_item">
                                    <td>
                                        <input id="cuadrado" type="checkbox" />
                                        <t t-esc="grouped_item" />
                                    </td>
                                </t>
                            </tr>
                            <t t-set="grouped_items" t-value="[]" />
                        </t>
                    </t>
                </table>
            </div>
            <!-- Contenedor derecho -->
            <div>
                <table
                    class="table table-borderless o_survey_question_matrix text-white text-center">
                    <t t-set="display_counter" t-value="0" />
                    <t t-set="total_counter" t-value="0" />
                    <t t-set="line_infos" t-value="[]" />
                    <t t-foreach="survey_info" t-as="info">
                        <t t-set="total_counter" t-value="total_counter+1" />
                        <t t-if="info['value']">
                            <t t-set="display_counter" t-value="display_counter+1" />
                            <t t-set="line_infos" t-value="line_infos + [info]" />
                            <t t-if="display_counter % 2 == 0 or total_counter == len(survey_info)">
                                <tr class="bg-white text-white">
                                    <t t-foreach="line_infos" t-as="pair_info">
                                        <td
                                            class="o_survey_matrix_btn text-primary position-relative">
                                            <div>
                                                <t t-if="pair_info.get('label')">
                                                    <label>
                                                        <t t-esc="pair_info['label']" />
                                                    </label>
                                                </t>
                                                <span>
                                                    <t t-esc="pair_info['value']" />
                                                </span>
                                            </div>
                                        </td>
                                    </t>
                                </tr>
                                <t t-set="line_infos" t-value="[]" />
                            </t>
                        </t>
                    </t>
                </table>
            </div>
        </div>

        <!-- Contenedor debajo -->
        <div class="contenedor_debajo" style="--col-count: 3;">
            <t t-set="total_counter" t-value="0" />
            <t t-set="line_infos" t-value="[]" />
            <t t-foreach="survey_info2" t-as="info">
                <t t-set="total_counter" t-value="total_counter+1" />
                <t t-if="info['value']">
                    <t t-set="line_infos" t-value="line_infos + [info]" />
                    <t t-if="total_counter % 3 == 0 or total_counter == len(survey_info)">
                        <div class="row">
                            <t t-foreach="line_infos" t-as="pair_info">
                                <div class="col">
                                    <div class="o_survey_matrix_btn text-primary position-relative">
                                        <t t-if="pair_info.get('label')">
                                            <label>
                                                <t t-esc="pair_info['label']" />
                                            </label>
                                        </t>
                                        <span>
                                            <t t-esc="pair_info['value']" />
                                        </span>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <t t-set="line_infos" t-value="[]" />
                    </t>
                </t>
            </t>
        </div>
    </template>


    <template
        id="report_evaluation_certification_printing_report_survey_pdf_inspeccion_documental"
        name="Survey: print page"
    >
        <t t-call="web.external_layout">
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id" />
                </t>
                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                    <t t-set="company" t-value="o.company_id.sudo()" />
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company" />
                </t>
            </t>
            <t t-call="web.external_layout_standard">
                <link href="/survey_user_input_report/static/src/css/survey_user_input_report.css"
                    rel="stylesheet" />
                <page>
                    <t t-if="o.survey_id.title">
                        <div
                            style="text-align: center; padding: .6rem; margin: 0; padding: 0;"
                        >
                            <h1
                                t-field="o.survey_id.title"
                                style="font-size: 1.5rem; font-weight: bold; margin-bottom: .75rem;"
                            />
                        </div>
                    </t>
                    <t t-if="o.survey_id.description">
                        <div
                            t-field="o.survey_id.description"
                            style="margin-bottom: 1.5rem;"
                        />
                    </t>
                    <t t-if="review" t-call="o.survey_id.survey_button_retake" />
                    <t t-set="survey_form_readonly" t-value="true" />
                    <div class="wrap">
                        <div class="o_survey_print container">
                            <div role="form">
                                <fieldset disabled="disabled">
                                    <t
                                        t-call="survey_user_input_report.report_evaluation_certification_printing_report_survey_pdf_inspeccion_documental_cover"
                                        t-lang="o.partner_id.lang"
                                    />
                                    <t t-call="survey_user_input_report.template_survey_answers_template" />
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </page>
            </t>
        </t>
    </template>


    <template id="report_survey_pdf_inspeccion_documental">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t
                    t-call="survey_user_input_report.report_evaluation_certification_printing_report_survey_pdf_inspeccion_documental"
                    t-lang="o.partner_id.lang"
                />
            </t>
        </t>
    </template>


    <record
        id="action_report_survey_print_inspeccion_documental"
        model="ir.actions.report"
    >
        <field name="name">Inspección Documental</field>
        <field name="model">survey.user_input</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">survey_user_input_report.report_survey_pdf_inspeccion_documental</field>
        <field name="report_file">survey_user_input_report.report_survey_pdf_inspeccion_documental</field>
        <field name="print_report_name">'Printed Survey Inspección Documental'</field>
        <field name="binding_model_id" ref="survey.model_survey_user_input" />
        <field name="binding_type">report</field>
    </record>
</odoo>