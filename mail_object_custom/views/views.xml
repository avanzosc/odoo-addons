<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="email_compose_message_wizard_form" model="ir.ui.view">
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form" />
        <field name="arch" type="xml">
            <field name="reply_to" position="before">
                <field name="email_cc" placeholder="Email address to redirect..." attrs="{'invisible':['|', ('no_auto_thread', '=', False), ('composition_mode', '!=', 'mass_mail')],                                     'required':[('no_auto_thread', '=', True), ('composition_mode', '=', 'mass_mail')]}"/>
            </field>
        </field>
    </record>
</odoo>
