<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_stock_move_line_operation_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree" />
        <field name="arch" type="xml">
            <field name="lot_name" position="after">
                <field
          name="country_id"
          groups="stock.group_production_lot"
          attrs="{'readonly': ['&amp;', ('package_level_id', '!=', False), ('parent.picking_type_entire_packs', '=', True)]}"
          invisible="not context.get('show_lots_text')"
          optional="show"
        />
                <field
          name="global_gap"
          groups="stock.group_production_lot"
          attrs="{'readonly': ['&amp;', ('package_level_id', '!=', False), ('parent.picking_type_entire_packs', '=', True)]}"
          invisible="not context.get('show_lots_text')"
          optional="show"
        />
                <field
          name="lot_country_gloval_gap_of"
          groups="stock.group_production_lot"
          invisible="not context.get('show_lots_text')"
          readonly="1"
          optional="show"
        />
            </field>
            <field name="lot_id" position="after">
                <field
          name="lot_country_id"
          groups="stock.group_production_lot"
          invisible="not context.get('show_lots_m2o')"
          readonly="1"
          optional="show"
        />
                <field
          name="lot_global_gap"
          groups="stock.group_production_lot"
          invisible="not context.get('show_lots_m2o')"
          readonly="1"
          optional="show"
        />
                <field
          name="lot_country_gloval_gap_of"
          groups="stock.group_production_lot"
          invisible="not context.get('show_lots_m2o')"
          readonly="1"
          optional="show"
        />
            </field>
        </field>
    </record>

    <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="model">stock.move.line</field>
        <field
      name="inherit_id"
      ref="stock.view_stock_move_line_detailed_operation_tree"
    />
        <field name="arch" type="xml">
            <field name="lot_name" position="after">
                <field
          name="country_id"
          groups="stock.group_production_lot"
          attrs="{'column_invisible': [('parent.show_lots_text', '=', False)], 'invisible': [('lots_visible', '=', False)]}"
          optional="show"
        />
                <field
          name="global_gap"
          groups="stock.group_production_lot"
          attrs="{'column_invisible': [('parent.show_lots_text', '=', False)], 'invisible': [('lots_visible', '=', False)]}"
          optional="show"
        />
            </field>
            <field name="lot_id" position="after">
                <field
          name="lot_country_id"
          groups="stock.group_production_lot"
          attrs="{'column_invisible': [('parent.show_lots_text', '=', True)], 'invisible': [('lots_visible', '=', False)]}"
          readonly="1"
          optional="show"
        />
                <field
          name="lot_global_gap"
          groups="stock.group_production_lot"
          attrs="{'column_invisible': [('parent.show_lots_text', '=', True)], 'invisible': [('lots_visible', '=', False)]}"
          readonly="1"
          optional="show"
        />
                <field
          name="lot_country_gloval_gap_of"
          groups="stock.group_production_lot"
          attrs="{'column_invisible': [('parent.show_lots_text', '=', True)], 'invisible': [('lots_visible', '=', False)]}"
          readonly="1"
          optional="show"
        />
            </field>
        </field>
    </record>
</odoo>
