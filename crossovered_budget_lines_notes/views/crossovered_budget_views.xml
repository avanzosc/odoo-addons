<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="crossovered_budget_view_form" model="ir.ui.view">
        <field name="model">crossovered.budget</field>
        <field
      name="inherit_id"
      ref="account_budget_oca.crossovered_budget_view_form"
    />
        <field name="arch" type="xml">
            <xpath
        expr="//field[@name='crossovered_budget_line_ids']/tree/field[@name='percentage']"
        position="after"
      >
                <field name="notes" optional="show" />
            </xpath>
            <xpath
        expr="//field[@name='crossovered_budget_line_ids']/form//field[@name='company_id']/.."
        position="after"
      >
                <group col="4">
                    <field name="notes" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
