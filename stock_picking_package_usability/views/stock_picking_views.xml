<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" name="button_box">
                <button class="oe_stat_button" icon="fa-cubes" type="object" name="action_view_package">
                    <field string="Packages" name="packages_qty_weight" widget="statinfo"/>
                </button>
            </div>
            <field name="picking_type_id" position="after">
                <field name="qty_packages"/>
                <button name="action_create_package" type="object" string="Create Packs" attrs="{'invisible': [('state', 'in', ('draft', 'done', 'cancel'))]}"/>
            </field>
        </field>
    </record>

    <record id="view_picking_withcarrier_out_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
        <field name="arch" type="xml">
            <group name="carrier_data" position="inside">
                <field name="packages_qty"/>
                <label for="packages_weight" string="Packages Weight"/>
                <div>
                    <field name="packages_weight" class="oe_inline"/>
                    <field name="weight_uom_name" nolabel="1" class="oe_inline" style="margin-left:5px"/>
                </div>
                <label for="packages_volume" string="Packages Volume"/>
                <div>
                    <field name="packages_volume" class="oe_inline"/>
                    <field name="volume_uom_name" nolabel="1" class="oe_inline" style="margin-left:5px"/>
                </div>
            </group>
        </field>
    </record>
</odoo>
