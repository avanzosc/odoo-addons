<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_supplierinfo_import_line_view_search" model="ir.ui.view">
        <field name="model">product.supplierinfo.import.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id" />
                <field name="supplier_id" />
                <separator />
                <filter
          string="Errored"
          name="error"
          domain="[('state', '=', 'error')]"
        />
                <filter
          string="To Update"
          name="2update"
          domain="[('action', '=', 'update')]"
        />
                <filter
          string="To Create"
          name="2create"
          domain="[('action', '=', 'create')]"
        />
                <group expand="0" name="group_by" string="Group By">
                    <filter
            name="group_product"
            string="Product"
            context="{'group_by': 'product_id'}"
          />
                    <filter
            name="group_supplier"
            string="Supplier"
            context="{'group_by': 'supplier_id'}"
          />
                    <filter
            name="group_supplierinfo"
            string="Supplierinfo"
            context="{'group_by': 'product_supplierinfo_id'}"
          />
                    <separator />
                    <filter
            name="group_status"
            string="Status"
            context="{'group_by': 'state'}"
          />
                    <filter
            name="group_action"
            string="Action"
            context="{'group_by': 'action'}"
          />
                    <filter
            name="log_info_group"
            string="Log Info"
            context="{'group_by': 'log_info'}"
          />
                </group>
            </search>
        </field>
    </record>

    <record id="product_supplierinfo_import_line_view_form" model="ir.ui.view">
        <field name="model">product.supplierinfo.import.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
            name="action_validate"
            string="Validate"
            type="object"
            class="oe_read_only"
            states="2validate,error"
          />
                    <button
            name="action_process"
            string="Process"
            type="object"
            class="oe_read_only"
            states="error,pass"
          />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="supplier_code" />
                            <field name="supplier_name" />
                            <field name="product_code" />
                            <field name="product_name" />
                            <field
                name="supplier_product_code"
                attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
              />
                            <field
                name="supplier_product_name"
                attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
              />
                            <field
                name="quantity"
                attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
              />
                            <field
                name="price"
                attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
              />
                            <field
                name="discount"
                attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
              />
                            <field
                name="delay"
                attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
              />
                            <field
                name="currency"
                attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
              />
                            <field
                name="date_start"
                attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
              />
                            <field
                name="date_end"
                attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
              />
                            <field
                name="location"
                attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
              />
                            <field
                name="min_qty"
                attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
              />
                            <field
                name="max_qty"
                attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
              />
                            <field
                name="multiple_qty"
                attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
              />
                            <field
                name="trigger"
                attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
              />
                            <field name="state" />
                            <field name="action" />
                        </group>
                        <group>
                            <field
                name="supplier_id"
                options="{'no_create': True, 'no_open': True}"
              />
                            <field
                name="product_id"
                options="{'no_create': True, 'no_open': True}"
              />
                            <field
                name="product_supplierinfo_id"
                options="{'no_create': True, 'no_open': True}"
                attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
              />
                            <field
                name="currency_id"
                options="{'no_create': True, 'no_open': True}"
                attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
              />
                            <field
                name="location_id"
                options="{'no_create': True, 'no_open': True}"
                attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
              />
                            <field
                name="route_id"
                options="{'no_create': True, 'no_open': True}"
                attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
              />
                            <field
                name="orderpoint_id"
                options="{'no_create': True, 'no_open': True}"
                attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
              />
                        </group>
                    </group>
                    <field name="log_info" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_supplierinfo_import_line_view_tree" model="ir.ui.view">
        <field name="model">product.supplierinfo.import.line</field>
        <field name="arch" type="xml">
            <tree
        decoration-danger="state == 'error'"
        decoration-muted="state == 'done'"
        decoration-it="log_info"
        editable="top"
      >
                <field name="action" optional="hide" />
                <field name="supplier_code" optional="show" />
                <field name="supplier_name" optional="show" />
                <field name="supplier_id" optional="hide" />
                <field name="product_code" optional="show" />
                <field name="product_name" optional="show" />
                <field name="product_id" optional="hide" />
                <field
          name="supplier_product_code"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
        />
                <field
          name="supplier_product_name"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
        />
                <field
          name="product_supplierinfo_id"
          optional="hide"
          attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
        />
                <field
          name="quantity"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
        />
                <field
          name="price"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
        />
                <field
          name="discount"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
        />
                <field
          name="delay"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
        />
                <field
          name="currency"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
        />
                <field
          name="currency_id"
          optional="hide"
          attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
        />
                <field
          name="date_start"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
        />
                <field
          name="date_end"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'sourcing')]}"
        />
                <field
          name="location"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
        />
                <field
          name="location_id"
          optional="hide"
          attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
        />
                <field
          name="route_id"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
        />
                <field
          name="min_qty"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
        />
                <field
          name="max_qty"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
        />
                <field
          name="multiple_qty"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
        />
                <field
          name="trigger"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
        />
                <field
          name="orderpoint_id"
          optional="show"
          attrs="{'column_invisible': [('parent.import_type', '=', 'supplierinfo')]}"
        />
                <field name="state" optional="hide" />
                <field name="log_info" optional="show" />
            </tree>
        </field>
    </record>

    <record id="product_supplierinfo_import_line_action" model="ir.actions.act_window">
        <field name="name">Import Product Supplierinfo Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.supplierinfo.import.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="product_supplierinfo_import_line_view_tree" />
    </record>

    <record id="action_validate_import_line" model="ir.actions.server">
        <field name="name">Validate</field>
        <field name="model_id" ref="product.model_product_supplierinfo" />
        <field name="binding_model_id" ref="product.model_product_supplierinfo" />
        <field name="state">code</field>
        <field name="code">
            for record in records:
                record.action_validate()
        </field>
    </record>

    <record id="action_process_import_line" model="ir.actions.server">
        <field name="name">Process</field>
        <field name="model_id" ref="product.model_product_supplierinfo" />
        <field name="binding_model_id" ref="product.model_product_supplierinfo" />
        <field name="state">code</field>
        <field name="code">
            for record in records:
                record.action_process()
        </field>
    </record>
</odoo>
