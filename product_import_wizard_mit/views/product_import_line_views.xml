<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_import_line_view_form" model="ir.ui.view">
        <field name="model">product.import.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate"
                            string="Validate"
                            type="object"
                            class="oe_read_only"
                            states="2validate,error" />
                    <button name="action_process"
                            string="Process"
                            type="object"
                            class="oe_read_only"
                            states="pass" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group colspan="4">
                        <h1><field name="product_name" /></h1>
                    </group>
                    <group>
                        <field name="product_default_code" />
                        <field name="product_tmpl_id" />
                        <field name="product_ids" widget="many2many_tags" />
                        <field name="product_uom" />
                        <field name="product_uom_id" />
                        <field name="category_name" />
                        <field name="category_id" />
                        <field name="product_type_name" />
                        <field name="product_type_dest" />
                        <field name="attribute_name" />
                        <field name="attribute_id" />
                        <field name="attribute_values" />
                        <field name="attribute_values_ids" widget="many2many_tags" />
                        <field name="product_list_price" />
                        <field name="product_standard_price" />
                    </group>
                    <field name="log_info" readonly="True" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_import_line_view_tree" model="ir.ui.view">
        <field name="model">product.import.line</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'error'"
                  decoration-bf="state == 'done'"
                  decoration-it="log_info"
                  create="false"
                  editable="top">
                <field name="product_name" />
                <field name="product_default_code" />
                <field name="product_tmpl_id" />
                <field name="product_ids" widget="many2many_tags" attrs="{'readonly':[('product_tmpl_id','=',False)]}" />
                <field name="product_uom" />
                <field name="product_uom_id" />
                <field name="category_name" />
                <field name="category_id" />
                <field name="product_type_name" />
                <field name="product_type_dest" />
                <field name="attribute_name" />
                <field name="attribute_id" />
                <field name="attribute_values" />
                <field name="attribute_values_ids" widget="many2many_tags" attrs="{'readonly':[('attribute_id','=',False)]}" />
                <field name="product_list_price" />
                <field name="product_standard_price" />
                <field name="state" readonly="True" />
                <field name="log_info" readonly="True" />
            </tree>
        </field>
    </record>

    <record id="product_import_line_action" model="ir.actions.act_window">
        <field name="name">Import Product Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.import.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="product_import_line_view_tree" />
    </record>
</odoo>
