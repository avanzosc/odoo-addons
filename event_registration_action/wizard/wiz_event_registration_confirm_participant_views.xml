<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="wiz_event_registration_confirm_participant_form">
        <field name="name">wiz.event.registration.confirm.participant.form</field>
        <field name="model">wiz.event.registration.confirm.participant</field>
        <field name="arch" type="xml">
            <form string="Confirm course participant registration">
                <footer>
                    <button name="action_confirm_participant" type="object"
                        string="Confirm participants" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_confirm_participant_registration" model="ir.actions.act_window">
        <field name="name">Confirm course participant registration</field>
        <field name="res_model">wiz.event.registration.confirm.participant</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="event.model_event_registration" />
    </record>
</odoo>
