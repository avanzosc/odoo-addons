<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="wiz_event_registration_draft_participant_form">
        <field name="name">wiz.event.registration.draft.participant.form</field>
        <field name="model">wiz.event.registration.draft.participant</field>
        <field name="arch" type="xml">
            <form string="Back to draft course participant registration">
                <footer>
                    <button name="action_draft_participant" type="object"
                        string="Back to draft participants" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_confirm_draft_participant_registration" model="ir.actions.act_window">
        <field name="name">Back to draft course participant registration</field>
        <field name="res_model">wiz.event.registration.draft.participant</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="event.model_event_registration" />
    </record>
</odoo>
