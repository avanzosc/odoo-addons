<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_quant_tree_editable" model="ir.ui.view">
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="lineal_id" readonly="1" optional="show" />
            </field>
        </field>
    </record>

    <record id="view_stock_quant_tree" model="ir.ui.view">
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="lineal_id" optional="show" />
            </field>
        </field>
    </record>

    <record id="view_stock_quant_tree_inventory_editable" model="ir.ui.view">
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="lineal_id" readonly="1" optional="show" />
            </field>
        </field>
    </record>

    <record id="quant_search_view" model="ir.ui.view">
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="lineal_id" />
            </field>
            <filter name="productgroup" position="after">
                <filter
          string="Lineal"
          name="linealgroup"
          context="{'group_by': 'lineal_id'}"
        />
            </filter>
        </field>
    </record>
</odoo>
